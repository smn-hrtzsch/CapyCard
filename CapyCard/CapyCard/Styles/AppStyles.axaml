<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Button (Pill Shape) - Filled teal button with light text -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <!-- Force light text on hover by targeting the ContentPresenter -->
    <Style Selector="Button.primary /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
    </Style>
     
    <Style Selector="Button.primary:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="Opacity" Value="0.85"/>
    </Style>
     
    <Style Selector="Button.primary:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

    <!-- Destructive Button (Delete/Remove actions - Red with light text) -->
    <Style Selector="Button.destructive">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style Selector="Button.destructive /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
    </Style>
    
    <Style Selector="Button.destructive:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="Opacity" Value="0.85"/>
    </Style>
    
    <Style Selector="Button.destructive:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

    <!-- Secondary/Action Button (Outlined with bright teal border and text) -->
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryLightBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="Padding" Value="16,8"/>
    </Style>
    
    <Style Selector="Button.secondary /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryLightBrush}"/>
    </Style>
    
    <Style Selector="Button.secondary:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#15808080"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryLightBrush}"/>
    </Style>
    
    <Style Selector="Button.secondary:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#25808080"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryLightBrush}"/>
    </Style>

    <!-- Floating TextBox -->
    <Style Selector="TextBox.floating">
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusSmall}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource InputStrokeBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="TextBox.floating:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style Selector="TextBox.floating:pointerover /template/ Border#PART_BorderElement">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Floating ComboBox -->
    <Style Selector="ComboBox.floating">
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusSmall}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource InputStrokeBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="MinHeight" Value="45"/>
        <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style Selector="ComboBox.floating:pointerover /template/ Border#Background">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
    </Style>

    <Style Selector="ComboBox.floating:focus /template/ Border#Background">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
        <Setter Property="BorderThickness" Value="1.5"/>
    </Style>

    <Style Selector="ComboBoxItem">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="4,2"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <Style Selector="ComboBoxItem TextBlock">
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#25808080"/>
        <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
    </Style>

    <Style Selector="ComboBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
    </Style>

    <Style Selector="ComboBoxItem:selected TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
    </Style>

    <Style Selector="ComboBoxItem:selected:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
        <Setter Property="Opacity" Value="0.9"/>
    </Style>

    <!-- Rounding the dropdown popup itself -->
    <Style Selector="ComboBox /template/ Border#PopupBorder">
        <Setter Property="Background" Value="{DynamicResource PopupBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="BoxShadow" Value="0 8 24 0 #60000000"/>
        <Setter Property="Margin" Value="0,4,0,4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
        <Setter Property="MaxWidth" Value="350"/>
    </Style>

    <Style Selector="ComboBox.floating:pointerover /template/ Border#Background">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
    </Style>

    <Style Selector="ComboBox.floating:focus /template/ Border#Background">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
        <Setter Property="BorderThickness" Value="1.5"/>
    </Style>

    <Style Selector="ComboBox.floating:dropdownopen /template/ Border#Background">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
    </Style>

    <!-- Rounding the dropdown popup itself -->
    <Style Selector="ComboBox /template/ Border#PopupBorder">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="BoxShadow" Value="0 4 12 0 #40000000"/>
        <Setter Property="Margin" Value="0,4,0,4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
    </Style>

    <!-- ComboBox Items styling -->
    <Style Selector="ComboBoxItem">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="4,2"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="ComboBoxItem TextBlock">
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#25808080"/>
        <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
    </Style>

    <Style Selector="ComboBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
    </Style>

    <Style Selector="ComboBoxItem:selected:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
        <Setter Property="Opacity" Value="0.9"/>
    </Style>

    <Style Selector="ComboBox.floating:dropdownopen /template/ Border#Background">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
    </Style>

    <!-- Rounding the dropdown popup itself -->
    <Style Selector="ComboBox /template/ Border#PopupBorder">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="BoxShadow" Value="0 4 12 0 #40000000"/>
        <Setter Property="Margin" Value="0,4,0,4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
    </Style>

    <!-- Ensure the scrollviewer inside popup doesn't have a dark background -->
    <Style Selector="ComboBox /template/ ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#20808080"/>
        <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
    </Style>

    <Style Selector="ComboBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
    </Style>

    <Style Selector="ComboBoxItem:selected:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
        <Setter Property="Opacity" Value="0.9"/>
    </Style>

    <!-- Floating Card (List Items) -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusSmall}"/>
        <Setter Property="BoxShadow" Value="0 2 4 0 #20000000"/>
        <Setter Property="Margin" Value="4,4,4,8"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- Main Container Card (Large Corner) -->
    <Style Selector="Border.container">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusLarge}"/>
        <Setter Property="ClipToBounds" Value="True"/>
    </Style>
    
    <!-- FAB Button (Floating Action Button - Bright teal) -->
    <Style Selector="Button.fab">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="MinWidth" Value="50"/>
        <Setter Property="MinHeight" Value="50"/>
        <Setter Property="Padding" Value="12"/>
    </Style>
    
    <Style Selector="Button.fab /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
    </Style>
    
    <Style Selector="Button.fab:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="Opacity" Value="0.85"/>
    </Style>
    
    <Style Selector="Button.fab:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

    <!-- Icon Button (Circle) -->
    <Style Selector="Button.icon">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
    </Style>
    
    <Style Selector="Button.icon:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#25808080"/>
    </Style>
    
    <Style Selector="Button.icon:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#20808080"/>
    </Style>

    <Style Selector="ToggleButton.icon">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
    </Style>

    <Style Selector="ToggleButton.icon:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#25808080"/>
    </Style>

    <Style Selector="ToggleButton.icon:checked /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style Selector="ToggleButton.icon:checked:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#25808080"/>
    </Style>

    <!-- List Item Button (Transparent, fills space) -->
    <Style Selector="Button.list-item">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>
    
    <Style Selector="Button.list-item:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#15808080"/>
    </Style>
    
    <Style Selector="Button.list-item:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#15808080"/>
    </Style>

    <!-- CheckBox - Teal accent color (Matching Filled Button) -->
    <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
    </Style>
    
    <Style Selector="CheckBox:checked:pointerover /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Opacity" Value="0.85"/>
    </Style>

    <Style Selector="CheckBox /template/ Path#CheckGlyph">
        <Setter Property="Fill" Value="{DynamicResource ButtonForegroundBrush}"/>
    </Style>

    <!-- RadioButton - Teal accent color -->
    <Style Selector="RadioButton /template/ Ellipse#OuterEllipse">
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="Stroke" Value="{DynamicResource TextMutedBrush}"/>
        <Setter Property="StrokeThickness" Value="1.5"/>
    </Style>
    
    <Style Selector="RadioButton /template/ Ellipse#CheckOuterEllipse">
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="StrokeThickness" Value="1.5"/>
    </Style>

    <Style Selector="RadioButton:pointerover /template/ Ellipse#OuterEllipse">
        <Setter Property="Stroke" Value="{DynamicResource PrimaryBrush}"/>
    </Style>

    <!-- Force both ellipses to be teal and transparent when checked -->
    <Style Selector="RadioButton:checked /template/ Ellipse#OuterEllipse">
        <Setter Property="Stroke" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="IsVisible" Value="True"/>
    </Style>
    
    <Style Selector="RadioButton:checked /template/ Ellipse#CheckOuterEllipse">
        <Setter Property="Stroke" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="IsVisible" Value="True"/>
    </Style>
    
    <Style Selector="RadioButton:checked /template/ Ellipse#CheckGlyph">
        <Setter Property="Fill" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
    </Style>
    
    <!-- PointerOver States -->
    <Style Selector="RadioButton:checked:pointerover /template/ Ellipse#OuterEllipse">
        <Setter Property="Stroke" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Opacity" Value="0.85"/>
    </Style>
    
    <Style Selector="RadioButton:checked:pointerover /template/ Ellipse#CheckOuterEllipse">
        <Setter Property="Stroke" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Opacity" Value="0.85"/>
    </Style>
    
    <Style Selector="RadioButton:checked:pointerover /template/ Ellipse#CheckGlyph">
        <Setter Property="Fill" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Opacity" Value="0.85"/>
    </Style>

    <!-- Pressed States -->
    <Style Selector="RadioButton:pressed /template/ Ellipse#OuterEllipse">
        <Setter Property="Stroke" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>
    
    <Style Selector="RadioButton:pressed /template/ Ellipse#CheckOuterEllipse">
        <Setter Property="Stroke" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>
    
</Styles>
