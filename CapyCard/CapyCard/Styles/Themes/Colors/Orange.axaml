<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="PrimaryColor">#FFFF9800</Color>
            <Color x:Key="PrimaryLightColor">#FFFF9800</Color>
            <Color x:Key="SecondaryColor">#FF00BCD4</Color>
            <Color x:Key="ErrorColor">#FFD32F2F</Color>
            
            <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FF000000"/>

            <SolidColorBrush x:Key="ToggleSwitchFillOn" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="ToggleSwitchFillOnPointerOver" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="ToggleSwitchFillOnPressed" Color="{StaticResource PrimaryColor}"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <Color x:Key="PrimaryColor">#FFFFB74D</Color>
            <Color x:Key="PrimaryLightColor">#FFFFCC80</Color>
            <Color x:Key="SecondaryColor">#FF4DD0E1</Color>
            <Color x:Key="ErrorColor">#FFEF5350</Color>
            
            <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FF000000"/>

            <SolidColorBrush x:Key="ToggleSwitchFillOn" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="ToggleSwitchFillOnPointerOver" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="ToggleSwitchFillOnPressed" Color="{StaticResource PrimaryColor}"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>