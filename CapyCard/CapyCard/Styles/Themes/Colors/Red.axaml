<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="PrimaryColor">#FFF44336</Color>
            <Color x:Key="PrimaryLightColor">#FFF44336</Color>
            <Color x:Key="SecondaryColor">#FF536DFE</Color>
            <Color x:Key="ErrorColor">#FFB71C1C</Color>
            
            <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FFFFFFFF"/>

            <SolidColorBrush x:Key="ToggleSwitchFillOn" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="ToggleSwitchFillOnPointerOver" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="ToggleSwitchFillOnPressed" Color="{StaticResource PrimaryColor}"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <Color x:Key="PrimaryColor">#FFE57373</Color>
            <Color x:Key="PrimaryLightColor">#FFEF9A9A</Color>
            <Color x:Key="SecondaryColor">#FF8C9EFF</Color>
            <Color x:Key="ErrorColor">#FFEF5350</Color>
            
            <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FF000000"/>

            <SolidColorBrush x:Key="ToggleSwitchFillOn" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="ToggleSwitchFillOnPointerOver" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="ToggleSwitchFillOnPressed" Color="{StaticResource PrimaryColor}"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>