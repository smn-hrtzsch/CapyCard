<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="PrimaryColor">#FF2196F3</Color>
            <Color x:Key="PrimaryLightColor">#FF2196F3</Color>
            <Color x:Key="SecondaryColor">#FFFF4081</Color>
            <Color x:Key="ErrorColor">#FFD32F2F</Color>
            
            <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FFFFFFFF"/>

            <SolidColorBrush x:Key="ToggleSwitchFillOn" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="ToggleSwitchFillOnPointerOver" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="ToggleSwitchFillOnPressed" Color="{StaticResource PrimaryColor}"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <Color x:Key="PrimaryColor">#FF64B5F6</Color>
            <Color x:Key="PrimaryLightColor">#FF90CAF9</Color>
            <Color x:Key="SecondaryColor">#FFFF80AB</Color>
            <Color x:Key="ErrorColor">#FFEF5350</Color>
            
            <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FF000000"/>

            <SolidColorBrush x:Key="ToggleSwitchFillOn" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="ToggleSwitchFillOnPointerOver" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="ToggleSwitchFillOnPressed" Color="{StaticResource PrimaryColor}"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>