<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
    
    <!-- Zen Mode Overrides: Make buttons less distracting (Outline instead of Filled) -->
    
    <!-- Primary Buttons -> Outline Style -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
    </Style>

    <Style Selector="Button.primary:pointerover">
        <Setter Property="Background" Value="#15808080" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHoverBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHoverBrush}" />
    </Style>

    <Style Selector="Button.primary:pressed">
        <Setter Property="Background" Value="#25808080" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
    </Style>

    <!-- Destructive Buttons -> Outline Style -->
    <Style Selector="Button.destructive">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}" />
    </Style>

    <Style Selector="Button.destructive:pointerover">
        <Setter Property="Background" Value="#15808080" />
        <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="Opacity" Value="0.85"/>
    </Style>

    <!-- FABs -> Outline Style -->
    <Style Selector="Button.fab">
        <Setter Property="Background" Value="Transparent" /> 
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
    </Style>

    <Style Selector="Button.fab:pointerover">
        <Setter Property="Background" Value="#15808080" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHoverBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHoverBrush}" />
    </Style>

    <Style Selector="Button.fab:pressed">
        <Setter Property="Background" Value="#25808080" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
    </Style>

    <!-- CheckBox -> Dezenter (Outline) -->
    <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1.5"/>
    </Style>
    <Style Selector="CheckBox:checked /template/ Path#CheckGlyph">
        <Setter Property="Fill" Value="{DynamicResource PrimaryBrush}"/>
    </Style>

    <!-- RadioButton -> Dezenter -->
    <Style Selector="RadioButton:checked /template/ Ellipse#CheckGlyph">
        <Setter Property="Opacity" Value="0.8"/>
    </Style>

    <!-- Secondary Buttons -> More muted -->
    <Style Selector="Button.secondary">
        <Setter Property="Opacity" Value="0.6" />
    </Style>
    
    <!-- Floating Inputs -> Less colorful focus -->
    <Style Selector="TextBox.floating:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{DynamicResource TextMutedBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
</Styles>
