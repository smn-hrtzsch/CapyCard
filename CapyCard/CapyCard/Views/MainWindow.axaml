<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CapyCard.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CapyCard.Views.MainWindow"
        x:DataType="vm:MainViewModel" 
        Title="CapyCard"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/icon.ico">
            
    <!-- 
      Alle Kommentare sind jetzt HIER, innerhalb des <Window>...</Window>
      Blocks, was legaler XML-Code ist.
      
      Dieser ContentControl hostet unsere 'Seiten' (CurrentViewModel).
    -->
    <ContentControl Content="{Binding CurrentViewModel}" />

</Window>