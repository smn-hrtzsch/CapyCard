<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CapyCard.ViewModels"
             xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
             xmlns:local="clr-namespace:CapyCard.Controls"
             xmlns:conv="clr-namespace:CapyCard.Converters"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
              x:Class="CapyCard.Views.CardListView"
              x:DataType="vm:CardListViewModel"
              x:Name="Root"
              Focusable="True">

    <UserControl.Resources>
        <conv:SelectAllTextToIconConverter x:Key="SelectAllTextToIconConverter"/>
        <conv:GridViewToIconConverter x:Key="GridViewToIconConverter"/>
        <conv:GridViewToTextConverter x:Key="GridViewToTextConverter"/>
        <conv:BoolToChevronConverter x:Key="BoolToChevronConverter"/>
        <conv:PlainTextConverter x:Key="PlainTextConverter"/>
        <conv:CardHasImagesConverter x:Key="CardHasImagesConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Style for the Column Selector Container -->
        <Style Selector="Border.input-container">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource InputStrokeBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- MenuFlyout Styling -->
        <Style Selector="MenuFlyoutPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="CornerRadius" Value="12"/>
        </Style>
        <Style Selector="MenuItem">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <!-- Style for the Group Container (wrapper around header + content) -->
        <Style Selector="Border.group-container">
            <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <!-- Hover on container changes border to teal -->
        <Style Selector="Border.group-container:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>

        <!-- Style for the Group Header ToggleButton -->
        <Style Selector="ToggleButton.group-header">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="CornerRadius" Value="16"/>
        </Style>

        <Style Selector="ToggleButton.group-header TextBlock">
             <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
        </Style>
        <Style Selector="ToggleButton.group-header materialIcons|MaterialIcon">
             <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
        </Style>

        <Style Selector="ToggleButton.group-header:checked Border.badge">
            <Setter Property="Background" Value="{DynamicResource SurfaceBorderBrush}"/>
        </Style>

        <!-- Checked state: ToggleButton gets teal border (container keeps gray border) -->
        <Style Selector="ToggleButton.group-header:checked">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>

        <!-- Remove system accent from ToggleButton template -->
        <Style Selector="ToggleButton.group-header /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ToggleButton.group-header:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ToggleButton.group-header:checked /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Style for the expanded content container -->
        <Style Selector="Panel.group-content">
            <Setter Property="Margin" Value="12,12,12,12"/>
        </Style>

        <!-- DataGrid Overrides to kill orange selection and system accent -->
        <Style Selector="DataGrid">
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
        </Style>
        <Style Selector="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Focusable" Value="False"/>
        </Style>
        <Style Selector="DataGridRow:selected /template/ Rectangle#Background">
            <Setter Property="Fill" Value="Transparent"/>
        </Style>
        <Style Selector="DataGridRow:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="DataGridRow:pointerover /template/ Rectangle#Background">
            <Setter Property="Fill" Value="#08FFFFFF"/>
        </Style>
        <Style Selector="DataGridCell:selected /template/ Grid#FocusVisual">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
        <Style Selector="DataGridCell:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="DataGridCell">
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Focusable" Value="False"/>
        </Style>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="SeparatorBrush" Value="Transparent"/>
        </Style>
        <Style Selector="DataGridRow:selected TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
        </Style>
        <Style Selector="DataGridRow:focus /template/ Rectangle#FocusVisual">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
        
        <Style Selector="Border.preview-dialog">
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="CornerRadius" Value="28"/>
        </Style>
        <Style Selector=".compact Border.preview-dialog">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="CornerRadius" Value="24"/>
        </Style>
        <Style Selector="Grid.preview-header">
            <Setter Property="Margin" Value="0,0,0,24"/>
        </Style>
        <Style Selector=".compact Grid.preview-header">
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        <Style Selector="StackPanel.preview-header-actions">
            <Setter Property="Spacing" Value="12"/>
        </Style>
        <Style Selector=".compact StackPanel.preview-header-actions">
            <Setter Property="Spacing" Value="8"/>
        </Style>
        <Style Selector="Grid.preview-content">
            <Setter Property="Margin" Value="0,0,0,24"/>
        </Style>
        <Style Selector=".compact Grid.preview-content">
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        <Style Selector="ScrollViewer.preview-scroll">
            <Setter Property="Padding" Value="0,0,24,0"/>
        </Style>
        <Style Selector=".compact ScrollViewer.preview-scroll">
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style Selector="Button.preview-nav">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style Selector=".compact Button.preview-nav">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
        </Style>
        <Style Selector="Button.preview-nav-left">
            <Setter Property="Margin" Value="0,0,16,0"/>
        </Style>
        <Style Selector="Button.preview-nav-right">
            <Setter Property="Margin" Value="16,0,0,0"/>
        </Style>
        <Style Selector=".compact Button.preview-nav-left">
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style Selector=".compact Button.preview-nav-right">
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>
        <Style Selector="Button.preview-nav materialIcons|MaterialIcon">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
        </Style>
        <Style Selector=".compact Button.preview-nav materialIcons|MaterialIcon">
            <Setter Property="Width" Value="22"/>
            <Setter Property="Height" Value="22"/>
        </Style>
        <Style Selector="ScrollViewer.image-preview-scroll">
            <Setter Property="Padding" Value="40"/>
        </Style>
        <Style Selector=".compact ScrollViewer.image-preview-scroll">
            <Setter Property="Padding" Value="16"/>
        </Style>
        <Style Selector="Border.image-preview-controls">
            <Setter Property="Margin" Value="32,0,32,48"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="MaxWidth" Value="640"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style Selector=".compact Border.image-preview-controls">
            <Setter Property="Margin" Value="16,0,16,24"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="MaxWidth" Value="10000"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style Selector="Grid.image-preview-controls-grid">
            <Setter Property="ColumnSpacing" Value="20"/>
        </Style>
        <Style Selector=".compact Grid.image-preview-controls-grid">
            <Setter Property="ColumnSpacing" Value="10"/>
        </Style>
        <Style Selector="Button.image-preview-control-button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style Selector=".compact Button.image-preview-control-button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="6"/>
        </Style>
        <Style Selector="Grid.image-preview-zoom-grid">
            <Setter Property="ColumnSpacing" Value="12"/>
        </Style>
        <Style Selector=".compact Grid.image-preview-zoom-grid">
            <Setter Property="ColumnSpacing" Value="6"/>
        </Style>
        <Style Selector="Slider.image-preview-zoom-slider">
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MaxWidth" Value="160"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style Selector=".compact Slider.image-preview-zoom-slider">
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MaxWidth" Value="10000"/>
        </Style>
        <Style Selector="Slider.image-preview-zoom-slider:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>
        <Style Selector="Slider.image-preview-zoom-slider:pressed">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>
        <Style Selector="Slider.image-preview-zoom-slider /template/ Thumb">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>
        <Style Selector="Slider.image-preview-zoom-slider /template/ Thumb:pointerover">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>
        <Style Selector="Slider.image-preview-zoom-slider /template/ Thumb:pressed">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>
        <Style Selector="Slider.image-preview-zoom-slider /template/ RepeatButton#PART_DecreaseButton">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>
        <Style Selector="Slider.image-preview-zoom-slider /template/ RepeatButton#PART_DecreaseButton:pointerover">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>
        <Style Selector="Slider.image-preview-zoom-slider /template/ RepeatButton#PART_DecreaseButton:pressed">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>
        <Style Selector="Slider.image-preview-zoom-slider /template/ RepeatButton#PART_IncreaseButton">
            <Setter Property="Background" Value="{DynamicResource SurfaceBorderBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
        </Style>
        <Style Selector="Slider.image-preview-zoom-slider /template/ RepeatButton#PART_IncreaseButton:pointerover">
            <Setter Property="Background" Value="{DynamicResource SurfaceBorderBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
        </Style>
        <Style Selector="Slider.image-preview-zoom-slider /template/ RepeatButton#PART_IncreaseButton:pressed">
            <Setter Property="Background" Value="{DynamicResource SurfaceBorderBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
        </Style>
        <Style Selector="TextBlock.image-preview-zoom-text">
            <Setter Property="Width" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style Selector=".compact TextBlock.image-preview-zoom-text">
            <Setter Property="Width" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector=".compact Button.preview-learn">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="16"/>
        </Style>
        <Style Selector=".zen Button.preview-learn-text StackPanel materialIcons|MaterialIcon">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
        <Style Selector=".zen .compact Button.preview-learn-text StackPanel materialIcons|MaterialIcon">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
        <Style Selector=".zen Button.preview-learn-icon materialIcons|MaterialIcon">
            <Setter Property="IsVisible" Value="True"/>
        </Style>
    </UserControl.Styles>
    
    <Panel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <DockPanel Margin="12,16">
                <!-- TOP HEADER AREA -->
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8" Spacing="8">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Button Command="{Binding GoBackCommand}"
                                Classes="primary"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                ToolTip.Tip="{Binding BackButtonText}"
                                Padding="12,8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <materialIcons:MaterialIcon Kind="ArrowLeft" Width="20" Height="20"/>
                                <TextBlock Text="{Binding BackButtonText}" IsVisible="{Binding !#Root.IsCompactMode}"/>
                            </StackPanel>
                        </Button>
                        
                        <Panel Grid.Column="1" />
                        
                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            
                            <Border Classes="input-container" IsVisible="{Binding ShowPdfButton}">
                                <StackPanel Orientation="Horizontal" Spacing="0" VerticalAlignment="Center">
                                    <materialIcons:MaterialIcon Kind="ViewDashboard" 
                                                              Width="20" Height="20"
                                                              Foreground="{DynamicResource TextMutedBrush}"
                                                              ToolTip.Tip="Spaltenanzahl"
                                                              Margin="4,0,4,0"/>
                                    <ComboBox ItemsSource="{Binding ColumnOptions}"
                                              SelectedItem="{Binding SelectedColumnCount}"
                                              Width="70"
                                              Classes="floating"
                                              BorderThickness="0"
                                              Margin="0"
                                              Padding="8,8"/>
                                </StackPanel>
                            </Border>
                            
                            <Button Command="{Binding GeneratePdfCommand}"
                                    Classes="secondary"
                                    IsVisible="{Binding ShowPdfButton}"
                                    ToolTip.Tip="Auswahl als PDF speichern"
                                    Padding="12,8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <materialIcons:MaterialIcon Kind="FilePdfBox" Width="20" Height="20"/>
                                    <TextBlock Text="PDF" IsVisible="{Binding !#Root.IsCompactMode}"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding ToggleViewCommand}"
                                    Classes="secondary"
                                    ToolTip.Tip="Ansicht wechseln"
                                    Padding="12,8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <materialIcons:MaterialIcon Kind="{Binding IsGridView, Converter={StaticResource GridViewToIconConverter}}" 
                                                              Width="20" Height="20"/>
                                    <TextBlock Text="{Binding IsGridView, Converter={StaticResource GridViewToTextConverter}}" 
                                               IsVisible="{Binding !#Root.IsCompactMode}"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding ToggleSelectAllCommand}"
                                    Classes="secondary"
                                    ToolTip.Tip="{Binding SelectAllButtonText}"
                                    Padding="12,8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <materialIcons:MaterialIcon Kind="{Binding SelectAllButtonText, Converter={StaticResource SelectAllTextToIconConverter}}" 
                                                              Width="20" Height="20"/>
                                    <TextBlock Text="{Binding SelectAllButtonText}" IsVisible="{Binding !#Root.IsCompactMode}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                    
                    <Separator Height="1" Background="{DynamicResource SurfaceBorderBrush}" Opacity="0.5" Margin="0,4"/>
                    
                    <!-- Title -->
                    <Border Background="{DynamicResource SurfaceBorderBrush}" 
                            CornerRadius="20" 
                            Padding="16,4" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="12,0"
                            Opacity="0.8">
                        <TextBlock Text="{Binding DeckName}" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextControlForeground}"/>
                    </Border>
                </StackPanel>
                
                <!-- MAIN LIST AREA -->
                <ItemsControl ItemsSource="{Binding CardGroups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:CardGroupViewModel">
                            <Border Classes="group-container"
                                    Margin="0,0,0,24">
                                <StackPanel>
                                    <ToggleButton IsChecked="{Binding IsExpanded}"
                                                  Classes="group-header">
                                        <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
                                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                                <materialIcons:MaterialIcon Kind="{Binding IsExpanded, Converter={StaticResource BoolToChevronConverter}}" 
                                                                          Width="24" Height="24"/>
                                                <TextBlock Text="{Binding Title}" 
                                                           FontSize="18" 
                                                           FontWeight="Bold"/>
                                                 <Border Classes="badge"
                                                         Background="{DynamicResource SurfaceBorderBrush}"
                                                         Padding="10,2"
                                                         CornerRadius="12"
                                                         VerticalAlignment="Center">
                                                     <TextBlock Text="{Binding Cards.Count}" 
                                                                FontSize="12"
                                                                FontWeight="Bold"
                                                                VerticalAlignment="Center"/>
                                                 </Border>
                                            <materialIcons:MaterialIcon Kind="CheckboxMultipleMarked"
                                                                      Width="20" Height="20"
                                                                      Classes="selection-indicator"
                                                                      IsVisible="{Binding ShowSelectionIndicator}"
                                                                      ToolTip.Tip="Enthält ausgewählte Karten"/>
                                        </StackPanel>

                                            <Panel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                <Button
                                                        Command="{Binding $parent[UserControl].DataContext.ShowSelectedPreviewCommand}"
                                                        Classes="icon"
                                                        ToolTip.Tip="Vorschau"
                                                        Width="36"
                                                        Height="36"
                                                        CornerRadius="18">
                                                    <materialIcons:MaterialIcon Kind="Eye" Width="18" Height="18" Foreground="{DynamicResource TextMutedBrush}"/>
                                                </Button>
                                            </Panel>
                                        </Grid>
                                    </ToggleButton>

                                <Panel IsVisible="{Binding IsExpanded}"
                                       Classes="group-content">
                                    <!-- GRID VIEW -->
                                    <ItemsControl ItemsSource="{Binding Cards}"
                                                 IsVisible="{Binding $parent[UserControl].DataContext.IsGridView}"
                                                 Background="Transparent"
                                                 Margin="0,0,-12,0"
                                                 PointerReleased="Cards_OnPointerReleased"
                                                 PointerMoved="Cards_OnPointerMoved"
                                                 PointerCaptureLost="Cards_OnPointerCaptureLost">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <controls:WrapPanel HorizontalAlignment="Stretch"
                                                                     VerticalAlignment="Top" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.Styles>
                                            <Style Selector="Border.card-tile">
                                                <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Width" Value="320"/>
                                                <Setter Property="Height" Value="190"/>
                                                <Setter Property="CornerRadius" Value="20"/>
                                                <Setter Property="ClipToBounds" Value="True"/>
                                            </Style>
                                            <Style Selector="Border.card-tile.selected">
                                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Style>
                                        </ItemsControl.Styles>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:CardItemViewModel">
                                                <Border Classes="card-tile"
                                                        Classes.selected="{Binding IsSelected}"
                                                        Margin="0,0,12,12"
                                                        PointerPressed="CardTile_OnPointerPressed">
                                                    <Grid RowDefinitions="Auto,*">
                                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto" Grid.Row="0" Margin="12,8,12,4">
                                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                      VerticalAlignment="Center"/>

                                                            <Button Grid.Column="2"
                                                                    Command="{Binding $parent[UserControl].DataContext.ShowPreviewCommand}"
                                                                    CommandParameter="{Binding}"
                                                                    Classes="icon"
                                                                    Margin="0,0,4,0"
                                                                    ToolTip.Tip="Vorschau">
                                                                <materialIcons:MaterialIcon Kind="Eye" Width="20" Height="20" Foreground="{DynamicResource TextMutedBrush}"/>
                                                            </Button>
                                                            
                                                            <Button Grid.Column="3"
                                                                    Classes="icon"
                                                                    ToolTip.Tip="Optionen">
                                                                <Button.Flyout>
                                                                    <MenuFlyout Placement="BottomEdgeAlignedRight">
                                                                        <MenuItem Header="Vorschau" 
                                                                                  Command="{Binding $parent[UserControl].DataContext.ShowPreviewCommand}"
                                                                                  CommandParameter="{Binding}">
                                                                            <MenuItem.Icon><materialIcons:MaterialIcon Kind="Eye" Width="18" Height="18"/></MenuItem.Icon>
                                                                        </MenuItem>
                                                                        <MenuItem Header="Bearbeiten" 
                                                                                  Command="{Binding $parent[UserControl].DataContext.EditCardCommand}"
                                                                                  CommandParameter="{Binding}">
                                                                            <MenuItem.Icon><materialIcons:MaterialIcon Kind="Pencil" Width="18" Height="18"/></MenuItem.Icon>
                                                                        </MenuItem>
                                                                        <Separator/>
                                                                        <MenuItem Header="Löschen" 
                                                                                  Command="{Binding $parent[UserControl].DataContext.RequestDeleteCardCommand}"
                                                                                  CommandParameter="{Binding}"
                                                                                  Foreground="Red">
                                                                            <MenuItem.Icon><materialIcons:MaterialIcon Kind="Delete" Width="18" Height="18" Foreground="Red"/></MenuItem.Icon>
                                                                        </MenuItem>
                                                                    </MenuFlyout>
                                                                </Button.Flyout>
                                                                <materialIcons:MaterialIcon Kind="DotsVertical" Width="20" Height="20" Foreground="{DynamicResource TextMutedBrush}"/>
                                                            </Button>
                                                        </Grid>
                                                        
                                                        <Grid Grid.Row="1" RowDefinitions="*,Auto,*" Margin="16,0,16,12">
                                                            <local:FormattedTextBlock Grid.Row="0"
                                                                                     FormattedText="{Binding Card.Front, Converter={StaticResource PlainTextConverter}}" 
                                                                                     ShowImageHint="{Binding Card.Front, Converter={StaticResource CardHasImagesConverter}}"
                                                                                     TextWrapping="Wrap" MaxLines="3"
                                                                                     FontSize="14" Foreground="{DynamicResource TextControlForeground}"
                                                                                     VerticalAlignment="Top"/>
                                                            
                                                            <Separator Grid.Row="1" Margin="0,6" Background="{DynamicResource SurfaceBorderBrush}" Height="1.5" Opacity="0.6"/>
                                                            
                                                            <local:FormattedTextBlock Grid.Row="2"
                                                                                     FormattedText="{Binding Card.Back, Converter={StaticResource PlainTextConverter}}" 
                                                                                     ShowImageHint="{Binding Card.Back, Converter={StaticResource CardHasImagesConverter}}"
                                                                                     TextWrapping="Wrap" MaxLines="3"
                                                                                     FontSize="14" Foreground="{DynamicResource TextMutedBrush}"
                                                                                     VerticalAlignment="Top"/>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- TABLE VIEW -->
                                    <StackPanel IsVisible="{Binding !$parent[UserControl].DataContext.IsGridView}">
                                        <Border IsVisible="{Binding !#Root.IsCompactMode}"
                                                BorderBrush="{DynamicResource SurfaceBorderBrush}" BorderThickness="1"
                                                CornerRadius="12" Background="Transparent" ClipToBounds="True">
                                            <DataGrid ItemsSource="{Binding Cards}"
                                                      PointerReleased="Cards_OnPointerReleased"
                                                      PointerMoved="Cards_OnPointerMoved"
                                                      PointerCaptureLost="Cards_OnPointerCaptureLost"
                                                      SelectionChanged="DataGrid_OnSelectionChanged"
                                                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                      Focusable="False">
                                                <DataGrid.Columns>
                                                    <DataGridTemplateColumn Width="Auto">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate x:DataType="vm:CardItemViewModel">
                                                                <Panel>
                                                                    <CheckBox x:Name="RowCheckBox"
                                                                              IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                                              HorizontalAlignment="Center" 
                                                                              Margin="12,0"
                                                                              IsHitTestVisible="True"/>
                                                                    <!-- Transparent overlay to catch row clicks -->
                                                                    <Border Background="Transparent"
                                                                            PointerPressed="RowOverlay_OnPointerPressed"
                                                                            IsHitTestVisible="True"
                                                                            HorizontalAlignment="Stretch"
                                                                            VerticalAlignment="Stretch"/>
                                                                </Panel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTemplateColumn Header="Vorderseite" Width="*">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate x:DataType="vm:CardItemViewModel">
                                                                <Panel>
                                                                    <local:FormattedTextBlock FormattedText="{Binding Card.Front, Converter={StaticResource PlainTextConverter}}" 
                                                                                             ShowImageHint="{Binding Card.Front, Converter={StaticResource CardHasImagesConverter}}"
                                                                                             Margin="12,12"
                                                                                             VerticalAlignment="Center" 
                                                                                             MaxLines="3"
                                                                                             TextTrimming="CharacterEllipsis"/>
                                                                    <!-- Transparent overlay to catch row clicks -->
                                                                    <Border Background="Transparent"
                                                                            PointerPressed="RowOverlay_OnPointerPressed"
                                                                            IsHitTestVisible="True"
                                                                            HorizontalAlignment="Stretch"
                                                                            VerticalAlignment="Stretch"/>
                                                                </Panel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTemplateColumn Header="Rückseite" Width="*">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate x:DataType="vm:CardItemViewModel">
                                                                <Panel>
                                                                    <local:FormattedTextBlock FormattedText="{Binding Card.Back, Converter={StaticResource PlainTextConverter}}" 
                                                                                             ShowImageHint="{Binding Card.Back, Converter={StaticResource CardHasImagesConverter}}"
                                                                                             Margin="12,12"
                                                                                             VerticalAlignment="Center" 
                                                                                             MaxLines="3"
                                                                                             TextTrimming="CharacterEllipsis"
                                                                                             Foreground="{DynamicResource TextMutedBrush}"/>
                                                                    <!-- Transparent overlay to catch row clicks -->
                                                                    <Border Background="Transparent"
                                                                            PointerPressed="RowOverlay_OnPointerPressed"
                                                                            IsHitTestVisible="True"
                                                                            HorizontalAlignment="Stretch"
                                                                            VerticalAlignment="Stretch"/>
                                                                </Panel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTemplateColumn Width="Auto">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate x:DataType="vm:CardItemViewModel">
                                                                <StackPanel Orientation="Horizontal" Spacing="4" Margin="8,0">
                                                                    <Button Command="{Binding $parent[UserControl].DataContext.ShowPreviewCommand}"
                                                                            CommandParameter="{Binding}" Classes="icon">
                                                                        <materialIcons:MaterialIcon Kind="Eye" Width="18" Height="18" Foreground="{DynamicResource TextMutedBrush}"/>
                                                                    </Button>
                                                                    <Button Classes="icon">
                                                                        <Button.Flyout>
                                                                            <MenuFlyout Placement="BottomEdgeAlignedRight">
                                                                                <MenuItem Header="Bearbeiten" 
                                                                                          Command="{Binding $parent[UserControl].DataContext.EditCardCommand}"
                                                                                          CommandParameter="{Binding}">
                                                                                    <MenuItem.Icon><materialIcons:MaterialIcon Kind="Pencil" Width="18" Height="18"/></MenuItem.Icon>
                                                                                </MenuItem>
                                                                                <MenuItem Header="Löschen" 
                                                                                          Command="{Binding $parent[UserControl].DataContext.RequestDeleteCardCommand}"
                                                                                          CommandParameter="{Binding}" Foreground="Red">
                                                                                    <MenuItem.Icon><materialIcons:MaterialIcon Kind="Delete" Width="18" Height="18" Foreground="Red"/></MenuItem.Icon>
                                                                                </MenuItem>
                                                                            </MenuFlyout>
                                                                        </Button.Flyout>
                                                                        <materialIcons:MaterialIcon Kind="DotsVertical" Width="18" Height="18" Foreground="{DynamicResource TextMutedBrush}"/>
                                                                    </Button>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Border>

                                        <Border IsVisible="{Binding #Root.IsCompactMode}"
                                                BorderBrush="{DynamicResource SurfaceBorderBrush}" BorderThickness="1"
                                                CornerRadius="12" Background="Transparent" ClipToBounds="True">
                                            <DataGrid ItemsSource="{Binding Cards}"
                                                      PointerReleased="Cards_OnPointerReleased"
                                                      PointerMoved="Cards_OnPointerMoved"
                                                      PointerCaptureLost="Cards_OnPointerCaptureLost"
                                                      SelectionChanged="DataGrid_OnSelectionChanged"
                                                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                      Focusable="False">
                                                <DataGrid.Columns>
                                                    <DataGridTemplateColumn Width="36">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate x:DataType="vm:CardItemViewModel">
                                                                <Panel>
                                                                    <CheckBox x:Name="RowCheckBox"
                                                                              IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                                              HorizontalAlignment="Center" 
                                                                              Margin="6,0"
                                                                              IsHitTestVisible="True"/>
                                                                    <!-- Transparent overlay to catch row clicks -->
                                                                    <Border Background="Transparent"
                                                                            PointerPressed="RowOverlay_OnPointerPressed"
                                                                            IsHitTestVisible="True"
                                                                            HorizontalAlignment="Stretch"
                                                                            VerticalAlignment="Stretch"/>
                                                                </Panel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTemplateColumn Header="Vorderseite" Width="*">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate x:DataType="vm:CardItemViewModel">
                                                                <Panel>
                                                                    <local:FormattedTextBlock FormattedText="{Binding Card.Front, Converter={StaticResource PlainTextConverter}}" 
                                                                                             ShowImageHint="{Binding Card.Front, Converter={StaticResource CardHasImagesConverter}}"
                                                                                             Margin="8,12"
                                                                                             VerticalAlignment="Center" 
                                                                                             MaxLines="3"
                                                                                             TextTrimming="CharacterEllipsis"/>
                                                                    <!-- Transparent overlay to catch row clicks -->
                                                                    <Border Background="Transparent"
                                                                            PointerPressed="RowOverlay_OnPointerPressed"
                                                                            IsHitTestVisible="True"
                                                                            HorizontalAlignment="Stretch"
                                                                            VerticalAlignment="Stretch"/>
                                                                </Panel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTemplateColumn Header="Rückseite" Width="*">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate x:DataType="vm:CardItemViewModel">
                                                                <Panel>
                                                                    <local:FormattedTextBlock FormattedText="{Binding Card.Back, Converter={StaticResource PlainTextConverter}}" 
                                                                                             ShowImageHint="{Binding Card.Back, Converter={StaticResource CardHasImagesConverter}}"
                                                                                             Margin="8,12"
                                                                                             VerticalAlignment="Center" 
                                                                                             MaxLines="3"
                                                                                             TextTrimming="CharacterEllipsis"
                                                                                             Foreground="{DynamicResource TextMutedBrush}"/>
                                                                    <!-- Transparent overlay to catch row clicks -->
                                                                    <Border Background="Transparent"
                                                                            PointerPressed="RowOverlay_OnPointerPressed"
                                                                            IsHitTestVisible="True"
                                                                            HorizontalAlignment="Stretch"
                                                                            VerticalAlignment="Stretch"/>
                                                                </Panel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTemplateColumn Width="42">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate x:DataType="vm:CardItemViewModel">
                                                            <Button Classes="icon" Width="32" Height="32" CornerRadius="16" Padding="0" Margin="4,0">
                                                                <Button.Flyout>
                                                                    <MenuFlyout Placement="BottomEdgeAlignedRight">
                                                                        <MenuItem Header="Vorschau" 
                                                                                  Command="{Binding $parent[UserControl].DataContext.ShowPreviewCommand}"
                                                                                  CommandParameter="{Binding}">
                                                                            <MenuItem.Icon><materialIcons:MaterialIcon Kind="Eye" Width="18" Height="18"/></MenuItem.Icon>
                                                                        </MenuItem>
                                                                        <MenuItem Header="Bearbeiten" 
                                                                                  Command="{Binding $parent[UserControl].DataContext.EditCardCommand}"
                                                                                  CommandParameter="{Binding}">
                                                                            <MenuItem.Icon><materialIcons:MaterialIcon Kind="Pencil" Width="18" Height="18"/></MenuItem.Icon>
                                                                        </MenuItem>
                                                                            <MenuItem Header="Löschen" 
                                                                                      Command="{Binding $parent[UserControl].DataContext.RequestDeleteCardCommand}"
                                                                                      CommandParameter="{Binding}" Foreground="Red">
                                                                                <MenuItem.Icon><materialIcons:MaterialIcon Kind="Delete" Width="18" Height="18" Foreground="Red"/></MenuItem.Icon>
                                                                            </MenuItem>
                                                                        </MenuFlyout>
                                                                    </Button.Flyout>
                                                                    <materialIcons:MaterialIcon Kind="DotsVertical" Width="16" Height="16" Foreground="{DynamicResource TextMutedBrush}"/>
                                                                </Button>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Border>
                                    </StackPanel>
                                </Panel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </ScrollViewer>

        <!-- Preview Overlay -->
        <Border x:Name="PreviewOverlay" Background="#CC000000" IsVisible="{Binding IsPreviewOpen}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border x:Name="PreviewDialogBorder" Background="{DynamicResource SurfaceBrush}" Classes="preview-dialog" MaxWidth="1200" MaxHeight="850" BoxShadow="0 10 30 0 #80000000" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Grid ColumnDefinitions="*,Auto" Classes="preview-header">
                        <TextBlock Text="{Binding PreviewTopic, StringFormat='Vorschau: {0}'}" 
                                 FontSize="22" FontWeight="Bold" 
                                 TextWrapping="Wrap" 
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Left"
                                 Margin="0,0,16,0"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Classes="preview-header-actions" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="12" IsVisible="{Binding !#Root.IsPreviewActionsMenuCompact}">
                                <StackPanel Orientation="Horizontal" Spacing="12" IsVisible="{Binding !IsEditing}">
                                    <Button Command="{Binding StartLearnCommand}"
                                            Classes="secondary preview-learn preview-learn-text"
                                            ToolTip.Tip="Zum Lern-Modus"
                                            Padding="16,8"
                                            CornerRadius="20"
                                            IsVisible="{Binding !#Root.IsPreviewActionsIconOnly}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <materialIcons:MaterialIcon Kind="School" Width="20" Height="20"/>
                                            <TextBlock Text="Lernen" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Command="{Binding StartLearnCommand}"
                                            Classes="secondary preview-learn preview-learn-icon"
                                            ToolTip.Tip="Zum Lern-Modus"
                                            Padding="14,8"
                                            CornerRadius="20"
                                            IsVisible="{Binding #Root.IsPreviewActionsIconOnly}">
                                        <materialIcons:MaterialIcon Kind="School" Width="20" Height="20"/>
                                    </Button>
                                </StackPanel>
                                
                                <Button Command="{Binding StartEditCommand}" IsVisible="{Binding ShowEditButton}" Classes="icon" ToolTip.Tip="Bearbeiten">
                                    <materialIcons:MaterialIcon Kind="Pencil" Width="22" Height="22" Foreground="{DynamicResource TextControlForeground}"/>
                                </Button>
                                
                                <Button Command="{Binding RequestDeleteCardCommand}" CommandParameter="{Binding PreviewCard}" IsVisible="{Binding ShowEditButton}" Classes="icon" ToolTip.Tip="Löschen">
                                    <materialIcons:MaterialIcon Kind="Delete" Width="22" Height="22" Foreground="{DynamicResource TextControlForeground}"/>
                                </Button>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="8" IsVisible="{Binding #Root.IsPreviewActionsMenuCompact}">
                                <Button Classes="icon" ToolTip.Tip="Optionen" IsVisible="{Binding !IsEditing}">
                                    <Button.Flyout>
                                        <MenuFlyout Placement="BottomEdgeAlignedRight">
                                            <MenuItem Header="Lernen"
                                                      Command="{Binding StartLearnCommand}"
                                                      IsVisible="{Binding !IsEditing}">
                                                <MenuItem.Icon>
                                                    <materialIcons:MaterialIcon Kind="School" Width="18" Height="18"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="Bearbeiten"
                                                      Command="{Binding StartEditCommand}"
                                                      IsVisible="{Binding ShowEditButton}">
                                                <MenuItem.Icon>
                                                    <materialIcons:MaterialIcon Kind="Pencil" Width="18" Height="18"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <Separator IsVisible="{Binding ShowEditButton}"/>
                                            <MenuItem Header="Löschen"
                                                      Command="{Binding RequestDeleteCardCommand}"
                                                      CommandParameter="{Binding PreviewCard}"
                                                      IsVisible="{Binding ShowEditButton}"
                                                      Foreground="Red">
                                                <MenuItem.Icon>
                                                    <materialIcons:MaterialIcon Kind="Delete" Width="18" Height="18" Foreground="Red"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </MenuFlyout>
                                    </Button.Flyout>
                                    <materialIcons:MaterialIcon Kind="DotsVertical" Width="20" Height="20" Foreground="{DynamicResource TextControlForeground}"/>
                                </Button>
                            </StackPanel>
                            
                            <Button Command="{Binding ClosePreviewCommand}" Classes="icon" ToolTip.Tip="Schließen" Margin="8,0,0,0">
                                <materialIcons:MaterialIcon Kind="Close" Width="24" Height="24" Foreground="{DynamicResource TextControlForeground}"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Content -->
                    <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" Classes="preview-content">
                        <Button Grid.Column="0" Command="{Binding NavigatePreviousPreviewCommand}" IsEnabled="{Binding CanNavigatePrevious}" Classes="icon preview-nav preview-nav-left" VerticalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="ChevronLeft"/>
                        </Button>
                        
                        <ScrollViewer Grid.Column="1" Classes="preview-scroll" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Spacing="24">
                                <!-- FRONT -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Vorderseite" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <Border Background="Transparent" BorderBrush="{DynamicResource SurfaceBorderBrush}" BorderThickness="1.5" Padding="20" CornerRadius="20" HorizontalAlignment="Stretch" IsVisible="{Binding !IsEditing}">
                                        <local:FormattedTextBlock FormattedText="{Binding PreviewCard.Front}" ImageClickCommand="{Binding OpenImagePreviewCommand}" TextWrapping="Wrap" MaxLines="0" TextTrimming="None"/>
                                    </Border>
                                    <Border Background="Transparent" BorderBrush="{DynamicResource SurfaceBorderBrush}" BorderThickness="1.5" Padding="0" CornerRadius="20" HorizontalAlignment="Stretch" IsVisible="{Binding IsEditing}">
                                        <local:WysiwygEditor Classes="flat" Text="{Binding EditFrontText, Mode=TwoWay}" Watermark="Vorderseite..." MinHeight="200" IsToolbarVisible="{Binding IsPreviewEditorToolbarVisible, Mode=TwoWay}"/>
                                    </Border>
                                </StackPanel>
                                
                                <!-- BACK -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Rückseite" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <Border Background="Transparent" BorderBrush="{DynamicResource SurfaceBorderBrush}" BorderThickness="1.5" Padding="20" CornerRadius="20" HorizontalAlignment="Stretch" IsVisible="{Binding !IsEditing}">
                                        <local:FormattedTextBlock FormattedText="{Binding PreviewCard.Back}" ImageClickCommand="{Binding OpenImagePreviewCommand}" TextWrapping="Wrap" MaxLines="0" TextTrimming="None"/>
                                    </Border>
                                    <Border Background="Transparent" BorderBrush="{DynamicResource SurfaceBorderBrush}" BorderThickness="1.5" Padding="0" CornerRadius="20" HorizontalAlignment="Stretch" IsVisible="{Binding IsEditing}">
                                        <local:WysiwygEditor Classes="flat" Text="{Binding EditBackText, Mode=TwoWay}" Watermark="Rückseite..." MinHeight="200" IsToolbarVisible="{Binding IsPreviewEditorToolbarVisible, Mode=TwoWay}"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                        
                        <Button Grid.Column="2" Command="{Binding NavigateNextPreviewCommand}" IsEnabled="{Binding CanNavigateNext}" Classes="icon preview-nav preview-nav-right" VerticalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="ChevronRight"/>
                        </Button>
                    </Grid>

                    <!-- Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                        <Button Content="Abbrechen" IsVisible="{Binding IsEditing}" Command="{Binding CancelEditCommand}" Padding="24,12" Classes="secondary" CornerRadius="25"/>
                        <Button Content="Speichern" IsVisible="{Binding IsEditing}" Command="{Binding SaveEditCommand}" Padding="24,12" Classes="primary" CornerRadius="25"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Delete Confirmation Dialog Overlay -->
        <Grid IsVisible="{Binding IsConfirmingDelete}" Background="#80000000" ZIndex="3000">
            <Border Background="{DynamicResource SurfaceBrush}" Padding="24" Margin="24" HorizontalAlignment="Stretch" VerticalAlignment="Center" MaxWidth="400" CornerRadius="28" BoxShadow="0 4 10 0 #40000000">
                <StackPanel Spacing="16">
                    <TextBlock Text="Karte löschen?" FontSize="20" FontWeight="Bold" TextWrapping="Wrap" Foreground="{DynamicResource TextControlForeground}"/>
                    <TextBlock Text="Möchtest du diese Karte wirklich löschen? Das kann nicht rückgängig gemacht werden." TextWrapping="Wrap" Foreground="{DynamicResource TextMutedBrush}"/>
                    <Grid ColumnDefinitions="*,*" Margin="0,8,0,0">
                        <Button Content="Abbrechen" Command="{Binding CancelDeleteCommand}" Classes="secondary" Grid.Column="0" Margin="0,0,4,0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
                            <TextBlock Text="Abbrechen" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </Button>
                        <Button Content="Löschen" Command="{Binding ConfirmDeleteCommand}" Classes="destructive" Grid.Column="1" Margin="4,0,0,0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
                            <TextBlock Text="Löschen" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- IMAGE PREVIEW OVERLAY -->
        <Grid IsVisible="{Binding IsImagePreviewOpen}" Background="#E6000000" ZIndex="2000" Name="ImagePreviewOverlay">
            <Grid>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Name="ImageScrollViewer" Classes="image-preview-scroll">
                    <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Width="{Binding ScaledImageWidth}" 
                            Height="{Binding ScaledImageHeight}">
                        <Image Source="{Binding PreviewImageSource}" 
                               Stretch="Uniform"
                               Width="{Binding ScaledImageWidth}"
                               Height="{Binding ScaledImageHeight}"
                               Name="PreviewImageControl"/>
                    </Canvas>
                </ScrollViewer>
                <Button Command="{Binding CloseImagePreviewCommand}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="24" Width="48" Height="48" CornerRadius="24" Background="#66000000" Padding="0"><materialIcons:MaterialIcon Kind="Close" Width="24" Height="24" Foreground="White"/></Button>
                <Border VerticalAlignment="Bottom" CornerRadius="28" Background="#CC202020" BorderBrush="#44FFFFFF" BorderThickness="1" BoxShadow="0 4 16 0 #80000000" Classes="image-preview-controls">
                    <Grid>
                        <Grid ColumnDefinitions="Auto,Auto,Auto,Auto" VerticalAlignment="Center" Classes="image-preview-controls-grid" IsVisible="{Binding !#Root.IsCompactMode}">
                            <Button Command="{Binding ResetZoomCommand}" Background="#33FFFFFF" Classes="image-preview-control-button">
                                <materialIcons:MaterialIcon Kind="MagnifyScan" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            <Button Command="{Binding ZoomOutCommand}" Background="#33FFFFFF" Classes="image-preview-control-button" Grid.Column="1">
                                <materialIcons:MaterialIcon Kind="Minus" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            <Grid ColumnDefinitions="Auto,Auto" VerticalAlignment="Center" Classes="image-preview-zoom-grid" Grid.Column="2">
                                <Slider Minimum="0.1" Maximum="5.0" Value="{Binding ImageZoomLevel}" VerticalAlignment="Center" Classes="image-preview-zoom-slider" Width="160"/>
                                <TextBlock Text="{Binding ImageZoomLevel, StringFormat='{}{0:0.0}x'}" Foreground="White" VerticalAlignment="Center" TextAlignment="Center" Classes="image-preview-zoom-text" Grid.Column="1"/>
                            </Grid>
                            <Button Command="{Binding ZoomInCommand}" Background="#33FFFFFF" Classes="image-preview-control-button" Grid.Column="3">
                                <materialIcons:MaterialIcon Kind="Plus" Width="20" Height="20" Foreground="White"/>
                            </Button>
                        </Grid>
                        <Grid ColumnDefinitions="Auto,Auto,*,Auto" VerticalAlignment="Center" Classes="image-preview-controls-grid" IsVisible="{Binding #Root.IsCompactMode}">
                            <Button Command="{Binding ResetZoomCommand}" Background="#33FFFFFF" Classes="image-preview-control-button">
                                <materialIcons:MaterialIcon Kind="MagnifyScan" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            <Button Command="{Binding ZoomOutCommand}" Background="#33FFFFFF" Classes="image-preview-control-button" Grid.Column="1">
                                <materialIcons:MaterialIcon Kind="Minus" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center" Classes="image-preview-zoom-grid" Grid.Column="2">
                                <Slider Minimum="0.1" Maximum="5.0" Value="{Binding ImageZoomLevel}" VerticalAlignment="Center" Classes="image-preview-zoom-slider"/>
                                <TextBlock Text="{Binding ImageZoomLevel, StringFormat='{}{0:0.0}x'}" Foreground="White" VerticalAlignment="Center" TextAlignment="Center" Classes="image-preview-zoom-text" Grid.Column="1"/>
                            </Grid>
                            <Button Command="{Binding ZoomInCommand}" Background="#33FFFFFF" Classes="image-preview-control-button" Grid.Column="3">
                                <materialIcons:MaterialIcon Kind="Plus" Width="20" Height="20" Foreground="White"/>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Panel>
</UserControl>
