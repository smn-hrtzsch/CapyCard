<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CapyCard.ViewModels"
             xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
             xmlns:local="clr-namespace:CapyCard.Controls"
             xmlns:conv="clr-namespace:CapyCard.Converters"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="CapyCard.Views.CardListView"
             x:DataType="vm:CardListViewModel"
             x:Name="Root">

    <UserControl.Resources>
        <conv:SelectAllTextToIconConverter x:Key="SelectAllTextToIconConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Style for the Column Selector Container -->
        <Style Selector="Border.input-container">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource InputStrokeBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style for the Group Header ToggleButton -->
        <Style Selector="ToggleButton.group-header">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="CornerRadius" Value="12"/>
        </Style>

        <!-- Default State for Content (Unchecked) -->
        <Style Selector="ToggleButton.group-header TextBlock">
             <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
        </Style>
        <Style Selector="ToggleButton.group-header materialIcons|MaterialIcon">
             <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"/>
        </Style>

        <!-- Expanded State Coloring (Deep Purple) -->
        <Style Selector="ToggleButton.group-header:checked /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
        </Style>
        
        <!-- Ensure text/icons are white on the dark purple background -->
        <Style Selector="ToggleButton.group-header:checked TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ToggleButton.group-header:checked materialIcons|MaterialIcon">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Handle the badge border color in expanded state -->
        <Style Selector="ToggleButton.group-header:checked Border.badge">
            <Setter Property="Background" Value="#30FFFFFF"/>
        </Style>

        <!-- Selection Indicator Style -->
        <Style Selector="materialIcons|MaterialIcon.selection-indicator">
             <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        </Style>
    </UserControl.Styles>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <DockPanel Margin="16">
            <!-- TOP HEADER AREA -->
            <Grid ColumnDefinitions="Auto,*,Auto" DockPanel.Dock="Top" Margin="0,0,0,16">
                <!-- Back Button -->
                <Button Command="{Binding GoBackCommand}"
                        Classes="primary"
                        Grid.Column="0"
                        ToolTip.Tip="{Binding BackButtonText}"
                        Padding="12,8"
                        Margin="0,0,12,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <materialIcons:MaterialIcon Kind="ArrowLeft" Width="20" Height="20" Foreground="#FFDDDDDD"/>
                        <TextBlock Text="{Binding BackButtonText}" Foreground="#FFDDDDDD" IsVisible="{Binding !#Root.IsCompactMode}"/>
                    </StackPanel>
                </Button>
                
                <TextBlock Text="{Binding DeckName}" 
                           Grid.Column="1"
                           FontSize="24" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource TextControlForeground}"/>
                
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Spacing="8"
                            HorizontalAlignment="Right">
                    
                    <!-- Columns Selection -->
                    <Border Classes="input-container" IsVisible="{Binding ShowPdfButton}">
                        <StackPanel Orientation="Horizontal" Spacing="0" VerticalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="ViewDashboard" 
                                                      Width="20" Height="20"
                                                      Foreground="{DynamicResource TextMutedBrush}"
                                                      ToolTip.Tip="Spaltenanzahl"
                                                      Margin="4,0,4,0"/>
                            <ComboBox ItemsSource="{Binding ColumnOptions}"
                                      SelectedItem="{Binding SelectedColumnCount}"
                                      Width="70"
                                      Classes="floating"
                                      BorderThickness="0"
                                      Margin="0"
                                      Padding="8,8"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- PDF Button -->
                    <Button Command="{Binding GeneratePdfCommand}"
                            Classes="secondary"
                            IsVisible="{Binding ShowPdfButton}"
                            ToolTip.Tip="Auswahl als PDF speichern"
                            Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <materialIcons:MaterialIcon Kind="FilePdfBox" Width="20" Height="20"/>
                            <TextBlock Text="PDF" IsVisible="{Binding !#Root.IsCompactMode}"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Select All Button -->
                    <Button Command="{Binding ToggleSelectAllCommand}"
                            Classes="secondary"
                            ToolTip.Tip="{Binding SelectAllButtonText}"
                            Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <materialIcons:MaterialIcon Kind="{Binding SelectAllButtonText, Converter={StaticResource SelectAllTextToIconConverter}}" 
                                                      Width="20" Height="20"/>
                            <TextBlock Text="{Binding SelectAllButtonText}" IsVisible="{Binding !#Root.IsCompactMode}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- MAIN LIST AREA -->
            <ItemsControl ItemsSource="{Binding CardGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="vm:CardGroupViewModel">
                        <StackPanel Margin="0,0,0,24">
                            <!-- Group Header -->
                            <ToggleButton IsChecked="{Binding IsExpanded}"
                                          Classes="group-header">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <materialIcons:MaterialIcon Kind="{Binding IsExpanded, Converter={StaticResource BoolToChevronConverter}}" 
                                                              Width="24" Height="24"/>
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="18" 
                                               FontWeight="Bold"/>
                                    <Border Classes="badge"
                                            Background="{DynamicResource SurfaceBorderBrush}"
                                            Padding="10,2"
                                            CornerRadius="12">
                                        <TextBlock Text="{Binding Cards.Count}" 
                                                   FontSize="12"
                                                   FontWeight="Bold"/>
                                    </Border>
                                    
                                    <!-- Selection Indicator (Visible if cards are selected in this group AND group is collapsed) -->
                                    <materialIcons:MaterialIcon Kind="CheckboxMultipleMarked"
                                                              Width="20" Height="20"
                                                              Classes="selection-indicator"
                                                              IsVisible="{Binding ShowSelectionIndicator}"
                                                              ToolTip.Tip="Enthält ausgewählte Karten"/>
                                </StackPanel>
                            </ToggleButton>

                            <!-- Group Content -->
                            <ListBox ItemsSource="{Binding Cards}"
                                     IsVisible="{Binding IsExpanded}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     SelectionMode="Multiple"
                                     PointerReleased="CardsListBox_OnPointerReleased"
                                     PointerMoved="CardsListBox_OnPointerMoved"
                                     PointerCaptureLost="CardsListBox_OnPointerCaptureLost">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <controls:WrapPanel HorizontalAlignment="Stretch"
                                                             VerticalAlignment="Top"
                                                             ItemWidth="300"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.Styles>
                                    <Style Selector="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Focusable" Value="True"/>
                                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay, DataType=vm:CardItemViewModel}"/>
                                    </Style>
                                    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                    
                                    <!-- Card Tile Styles (Selection State) -->
                                    <Style Selector="Border.card-tile">
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Style>
                                    <Style Selector="ListBoxItem:selected Border.card-tile">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                    </Style>
                                </ListBox.Styles>
                                <ListBox.ItemTemplate>
                                    <DataTemplate x:DataType="vm:CardItemViewModel">
                                        <Border Classes="card card-tile"
                                                Margin="0,0,16,16"
                                                PointerPressed="CardTile_OnPointerPressed">
                                            <Grid RowDefinitions="Auto,Auto">
                                                <!-- Toolbar -->
                                                <Grid ColumnDefinitions="Auto,*,Auto,Auto" Grid.Row="0" Margin="0,0,0,12">
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                              VerticalAlignment="Center"
                                                              IsHitTestVisible="False"/>
                                                    
                                                    <Button Command="{Binding $parent[UserControl].DataContext.EditCardCommand}"
                                                            CommandParameter="{Binding}"
                                                            Grid.Column="2"
                                                            Classes="icon"
                                                            ToolTip.Tip="Bearbeiten">
                                                        <materialIcons:MaterialIcon Kind="Pencil" Width="20" Height="20" Foreground="{DynamicResource TextMutedBrush}"/>
                                                    </Button>
                                                    
                                                    <Button Command="{Binding $parent[UserControl].DataContext.DeleteCardCommand}"
                                                            CommandParameter="{Binding}"
                                                            Grid.Column="3"
                                                            Classes="icon"
                                                            ToolTip.Tip="Löschen">
                                                        <materialIcons:MaterialIcon Kind="Delete" Width="20" Height="20" Foreground="{DynamicResource TextMutedBrush}"/>
                                                    </Button>
                                                </Grid>
                                                
                                                <!-- Content -->
                                                <StackPanel Grid.Row="1" Spacing="8">
                                                    <TextBlock Text="Vorderseite" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextMutedBrush}"/>
                                                    <local:FormattedTextBlock FormattedText="{Binding Card.Front}" TextWrapping="Wrap" Foreground="{DynamicResource TextControlForeground}"/>
                                                    
                                                    <Separator Margin="0,4" Background="{DynamicResource SurfaceBorderBrush}" Height="1"/>
                                                    
                                                    <TextBlock Text="Rückseite" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextMutedBrush}"/>
                                                    <local:FormattedTextBlock FormattedText="{Binding Card.Back}" TextWrapping="Wrap" Foreground="{DynamicResource TextControlForeground}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </DockPanel>
    </ScrollViewer>
</UserControl>