<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CapyCard.ViewModels"
              xmlns:controls="using:CapyCard.Controls"
              xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
              mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
              x:Class="CapyCard.Views.LearnView"
              x:DataType="vm:LearnViewModel"
              x:Name="Root"
              Focusable="True">

     <UserControl.Styles>
         <!-- Rating Button Hover Styles - even darker on hover -->
         <Style Selector="Button.rating-btn-red:pointerover /template/ ContentPresenter#PART_ContentPresenter">
             <Setter Property="Background" Value="#E57373"/>
             <Setter Property="TextElement.Foreground" Value="#000000"/>
         </Style>
         <Style Selector="Button.rating-btn-orange:pointerover /template/ ContentPresenter#PART_ContentPresenter">
             <Setter Property="Background" Value="#FFB74D"/>
             <Setter Property="TextElement.Foreground" Value="#000000"/>
         </Style>
         <Style Selector="Button.rating-btn-green:pointerover /template/ ContentPresenter#PART_ContentPresenter">
             <Setter Property="Background" Value="#81C784"/>
             <Setter Property="TextElement.Foreground" Value="#000000"/>
         </Style>
         <Style Selector="Button.rating-btn-blue:pointerover /template/ ContentPresenter#PART_ContentPresenter">
             <Setter Property="Background" Value="#64B5F6"/>
             <Setter Property="TextElement.Foreground" Value="#000000"/>
         </Style>
         <Style Selector="ScrollViewer.image-preview-scroll">
             <Setter Property="Padding" Value="40"/>
         </Style>
         <Style Selector=".compact ScrollViewer.image-preview-scroll">
             <Setter Property="Padding" Value="16"/>
         </Style>
         <Style Selector="Border.image-preview-controls">
             <Setter Property="Margin" Value="32,0,32,48"/>
             <Setter Property="Padding" Value="24,12"/>
             <Setter Property="MaxWidth" Value="640"/>
             <Setter Property="HorizontalAlignment" Value="Center"/>
         </Style>
         <Style Selector=".compact Border.image-preview-controls">
             <Setter Property="Margin" Value="16,0,16,24"/>
             <Setter Property="Padding" Value="12,8"/>
             <Setter Property="MaxWidth" Value="10000"/>
             <Setter Property="HorizontalAlignment" Value="Stretch"/>
         </Style>
         <Style Selector="Grid.image-preview-controls-grid">
             <Setter Property="ColumnSpacing" Value="20"/>
         </Style>
         <Style Selector=".compact Grid.image-preview-controls-grid">
             <Setter Property="ColumnSpacing" Value="10"/>
         </Style>
         <Style Selector="Button.image-preview-control-button">
             <Setter Property="Width" Value="40"/>
             <Setter Property="Height" Value="40"/>
             <Setter Property="CornerRadius" Value="20"/>
             <Setter Property="Padding" Value="8"/>
         </Style>
         <Style Selector=".compact Button.image-preview-control-button">
             <Setter Property="Width" Value="32"/>
             <Setter Property="Height" Value="32"/>
             <Setter Property="CornerRadius" Value="16"/>
             <Setter Property="Padding" Value="6"/>
         </Style>
         <Style Selector="Grid.image-preview-zoom-grid">
             <Setter Property="ColumnSpacing" Value="12"/>
         </Style>
         <Style Selector=".compact Grid.image-preview-zoom-grid">
             <Setter Property="ColumnSpacing" Value="6"/>
         </Style>
         <Style Selector="Slider.image-preview-zoom-slider">
             <Setter Property="MinWidth" Value="80"/>
             <Setter Property="MaxWidth" Value="160"/>
             <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
             <Setter Property="HorizontalAlignment" Value="Stretch"/>
         </Style>
         <Style Selector=".compact Slider.image-preview-zoom-slider">
             <Setter Property="MinWidth" Value="80"/>
             <Setter Property="MaxWidth" Value="10000"/>
         </Style>
         <Style Selector="Slider.image-preview-zoom-slider:pointerover">
             <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
             <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
         </Style>
         <Style Selector="Slider.image-preview-zoom-slider:pressed">
             <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
             <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
         </Style>
         <Style Selector="Slider.image-preview-zoom-slider /template/ Thumb">
             <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
             <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
         </Style>
         <Style Selector="Slider.image-preview-zoom-slider /template/ Thumb:pointerover">
             <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
             <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
         </Style>
         <Style Selector="Slider.image-preview-zoom-slider /template/ Thumb:pressed">
             <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
             <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
         </Style>
         <Style Selector="Slider.image-preview-zoom-slider /template/ RepeatButton#PART_DecreaseButton">
             <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
             <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
         </Style>
         <Style Selector="Slider.image-preview-zoom-slider /template/ RepeatButton#PART_DecreaseButton:pointerover">
             <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
             <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
         </Style>
         <Style Selector="Slider.image-preview-zoom-slider /template/ RepeatButton#PART_DecreaseButton:pressed">
             <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
             <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
         </Style>
         <Style Selector="Slider.image-preview-zoom-slider /template/ RepeatButton#PART_IncreaseButton">
             <Setter Property="Background" Value="{DynamicResource SurfaceBorderBrush}"/>
             <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
         </Style>
         <Style Selector="Slider.image-preview-zoom-slider /template/ RepeatButton#PART_IncreaseButton:pointerover">
             <Setter Property="Background" Value="{DynamicResource SurfaceBorderBrush}"/>
             <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
         </Style>
         <Style Selector="Slider.image-preview-zoom-slider /template/ RepeatButton#PART_IncreaseButton:pressed">
             <Setter Property="Background" Value="{DynamicResource SurfaceBorderBrush}"/>
             <Setter Property="BorderBrush" Value="{DynamicResource SurfaceBorderBrush}"/>
         </Style>
         <Style Selector="TextBlock.image-preview-zoom-text">
             <Setter Property="Width" Value="50"/>
             <Setter Property="FontSize" Value="16"/>
         </Style>
         <Style Selector=".compact TextBlock.image-preview-zoom-text">
             <Setter Property="Width" Value="36"/>
             <Setter Property="FontSize" Value="14"/>
         </Style>
     </UserControl.Styles>

     <UserControl.KeyBindings>
        <KeyBinding Command="{Binding SaveEditCommand}" Gesture="Ctrl+Enter"/>
        <KeyBinding Command="{Binding SaveEditCommand}" Gesture="Meta+Enter"/>
    </UserControl.KeyBindings>
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <DockPanel Margin="16">
                <!-- TOP HEADER -->
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16" Spacing="8">
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                        <!-- Back Button -->
                        <Button Command="{Binding GoBackCommand}" 
                                Grid.Column="0"
                                Classes="primary"
                                VerticalAlignment="Center"
                                ToolTip.Tip="{Binding BackButtonText}"
                                Padding="12,8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <materialIcons:MaterialIcon Kind="ArrowLeft" Width="20" Height="20"/>
                                <TextBlock Text="{Binding BackButtonText}" IsVisible="{Binding !#Root.IsCompactMode}"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Spacer -->
                        <Panel Grid.Column="1" />

                        <!-- Cycle Mode Button -->
                        <Button Grid.Column="2"
                                Command="{Binding CycleLearningModeCommand}"
                                Classes="primary"
                                Padding="12,8"
                                VerticalAlignment="Center"
                                ToolTip.Tip="Lern-Modus wechseln"
                                Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Panel Classes="zen-hide-icon">
                                    <materialIcons:MaterialIcon Kind="FormatListBulleted" Width="24" Height="24" IsVisible="{Binding IsSequentialMode}"/>
                                    <materialIcons:MaterialIcon Kind="Shuffle" Width="24" Height="24" IsVisible="{Binding IsRandomMode}"/>
                                    <materialIcons:MaterialIcon Kind="Brain" Width="24" Height="24" IsVisible="{Binding IsSmartMode}"/>
                                </Panel>
                                <TextBlock Text="Modus" VerticalAlignment="Center" IsVisible="{Binding !#Root.IsCompactMode}"/>
                            </StackPanel>
                        </Button>

                        <!-- Restart Button -->
                        <Button Command="{Binding ResetDeckProgressCommand}" 
                                Grid.Column="3"
                                Classes="primary"
                                Padding="12,8"
                                VerticalAlignment="Center"
                                ToolTip.Tip="Von vorn beginnen">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <materialIcons:MaterialIcon Kind="Restart" Width="24" Height="24" />
                                <TextBlock Text="Reset" VerticalAlignment="Center" IsVisible="{Binding !#Root.IsCompactMode}"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                    
                    <Separator Height="1" Background="{DynamicResource SurfaceBorderBrush}" Opacity="0.5" Margin="0,4"/>
                    
                    <!-- Title (Always centered on own line) -->
                    <Border Background="{DynamicResource SurfaceBorderBrush}" 
                            CornerRadius="20" 
                            Padding="16,4" 
                            HorizontalAlignment="Center"
                            Margin="12,0"
                            Opacity="0.8">
                        <TextBlock Text="{Binding DeckName, StringFormat='Lern-Modus: {0}'}" 
                                   FontSize="18" FontWeight="Bold" 
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextControlForeground}"/>
                    </Border>
                </StackPanel>
                
                <!-- MAIN CONTENT AREA -->
                <StackPanel Spacing="16" VerticalAlignment="Top" Margin="0,10,0,0">
                    
                    <!-- FRONT CARD -->
                    <Border Classes="card" MinHeight="150">
                        <Grid>
                            <Grid ColumnDefinitions="*,Auto" IsVisible="{Binding !IsEditing}">
                                <ScrollViewer Grid.Column="0">
                                    <controls:FormattedTextBlock FormattedText="{Binding CurrentCardFront}"
                                                                 ImageClickCommand="{Binding OpenImagePreviewCommand}"/>
                                </ScrollViewer>
                                
                                <Button Command="{Binding StartEditCommand}"
                                        IsVisible="{Binding ShowEditButton}"
                                        Grid.Column="1"
                                        Classes="icon"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Right">
                                    <materialIcons:MaterialIcon Kind="Pencil" Width="20" Height="20" Foreground="{DynamicResource TextMutedBrush}"/>
                                </Button>
                            </Grid>
                            
                            <controls:WysiwygEditor Text="{Binding EditFrontText, Mode=TwoWay}"
                                                    IsVisible="{Binding IsEditing}"
                                                    Watermark="Vorderseite..."
                                                    SpellCheckEnabled="True"
                                                    SpellCheckLocale="de-DE"
                                                    MinHeight="150"
                                                    VerticalAlignment="Stretch"/>
                        </Grid>
                    </Border>
                    
                    <!-- BACK CARD -->
                    <Border Classes="card" 
                            MinHeight="150"
                            IsVisible="{Binding IsBackVisible}">
                        <Grid>
                            <Grid ColumnDefinitions="*,Auto" IsVisible="{Binding !IsEditing}">
                                <ScrollViewer Grid.Column="0">
                                    <controls:FormattedTextBlock FormattedText="{Binding CurrentCardBack}"
                                                                 ImageClickCommand="{Binding OpenImagePreviewCommand}"/>
                                </ScrollViewer>
                                     
                                <Button Command="{Binding StartEditCommand}"
                                        IsVisible="{Binding ShowEditButton}"
                                        Grid.Column="1"
                                        Classes="icon"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Right">
                                    <materialIcons:MaterialIcon Kind="Pencil" Width="20" Height="20" Foreground="{DynamicResource TextMutedBrush}"/>
                                </Button>
                            </Grid>

                            <controls:WysiwygEditor Text="{Binding EditBackText, Mode=TwoWay}"
                                                    IsVisible="{Binding IsEditing}"
                                                    Watermark="Rückseite..."
                                                    SpellCheckEnabled="True"
                                                    SpellCheckLocale="de-DE"
                                                    MinHeight="150"
                                                    VerticalAlignment="Stretch"/>
                        </Grid>
                    </Border>
                    
                    <!-- ACTION BUTTONS -->
                    <Grid Margin="0,16,0,0">
                        <!-- Standard Navigation -->
                        <Grid IsVisible="{Binding !IsEditing}">
                            <StackPanel IsVisible="{Binding !IsCurrentCardSmart}">
                                <Button x:Name="ShowBackBtnStandard"
                                        Content="Rückseite anzeigen"
                                        Command="{Binding ShowBackCommand}"
                                        Classes="primary"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        IsVisible="{Binding ShowShowBackButton}"/>
                                
                                <Button x:Name="NextCardBtnStandard"
                                        Content="Nächste Karte"
                                        Command="{Binding NextCardCommand}"
                                        Classes="primary"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        IsVisible="{Binding ShowNextCardButton}"/>
                                
                                <Button Content="{Binding ReshuffleButtonText}"
                                        Command="{Binding NextCardCommand}"
                                        Classes="secondary"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        IsVisible="{Binding ShowReshuffleButton}"/>
                            </StackPanel>

                            <!-- Smart Mode Navigation (Rating Buttons) -->
                            <StackPanel IsVisible="{Binding IsCurrentCardSmart}">
                                 <Button x:Name="ShowBackBtnSmart"
                                        Content="Rückseite anzeigen"
                                        Command="{Binding ShowBackCommand}"
                                        Classes="primary"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        IsVisible="{Binding ShowShowBackButton}"/>

                                 <Grid ColumnDefinitions="*,*,*,*" IsVisible="{Binding ShowNextCardButton}" Margin="0,8,0,0">
                                     <Button x:Name="Rate1Btn" Grid.Column="0" Content="Nochmal" Command="{Binding RateCardCommand}" CommandParameter="1" HotKey="D1"
                                             HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                             Classes="rating-btn-red"
                                             Background="#EF9A9A" Foreground="#000000" CornerRadius="25" Margin="0,0,4,0" FontWeight="SemiBold"/>
                                     <Button x:Name="Rate2Btn" Grid.Column="1" Content="Schwer" Command="{Binding RateCardCommand}" CommandParameter="2" HotKey="D2"
                                             HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                             Classes="rating-btn-orange"
                                             Background="#FFCC80" Foreground="#000000" CornerRadius="25" Margin="4,0,4,0" FontWeight="SemiBold"/>
                                     <Button x:Name="Rate3Btn" Grid.Column="2" Content="Gut" Command="{Binding RateCardCommand}" CommandParameter="3" HotKey="D3"
                                             HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                             Classes="rating-btn-green"
                                             Background="#A5D6A7" Foreground="#000000" CornerRadius="25" Margin="4,0,4,0" FontWeight="SemiBold"/>
                                     <Button x:Name="Rate4Btn" Grid.Column="3" Content="Einfach" Command="{Binding RateCardCommand}" CommandParameter="4" HotKey="D4"
                                             HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                             Classes="rating-btn-blue"
                                             Background="#90CAF9" Foreground="#000000" CornerRadius="25" Margin="4,0,0,0" FontWeight="SemiBold"/>
                                 </Grid>
                                 
                                 <Button Content="{Binding ReshuffleButtonText}"
                                        Command="{Binding NextCardCommand}"
                                        Classes="secondary"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        IsVisible="{Binding ShowReshuffleButton}"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Edit Mode Actions -->
                        <Grid ColumnDefinitions="*,*" IsVisible="{Binding IsEditing}">
                            <Button Content="Abbrechen"
                                    Command="{Binding CancelEditCommand}"
                                    Classes="secondary"
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"/>
                            
                            <Button Content="Speichern"
                                    Command="{Binding SaveEditCommand}"
                                    Classes="primary"
                                    Grid.Column="1"
                                    Margin="8,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"/>
                        </Grid>
                    </Grid>

                    <!-- PROGRESS BAR -->
                    <Grid IsVisible="{Binding !IsEditing}" Margin="0,8,0,0">
                        <!-- Desktop Layout -->
                        <Grid ColumnDefinitions="Auto,*,Auto" IsVisible="{Binding !#Root.IsCompactMode}">
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding ProgressModeLabel}" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,0"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextMutedBrush}"/>
                            
                            <ProgressBar Grid.Column="1" 
                                         Minimum="0" 
                                         Maximum="{Binding TotalCount}" 
                                         Value="{Binding LearnedCount}" 
                                         VerticalAlignment="Center" 
                                         Height="8"
                                         CornerRadius="4"
                                         Foreground="{DynamicResource SecondaryBrush}"
                                         Background="{DynamicResource SurfaceBorderBrush}"/>
                            
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding ProgressText}" 
                                       VerticalAlignment="Center" 
                                       Margin="12,0,0,0"
                                       Foreground="{DynamicResource TextMutedBrush}"/>
                        </Grid>

                        <!-- Mobile/Compact Layout -->
                        <StackPanel Spacing="4" IsVisible="{Binding #Root.IsCompactMode}">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Text="{Binding ProgressModeLabel}" 
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextMutedBrush}"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding ProgressText}" 
                                           Foreground="{DynamicResource TextMutedBrush}"/>
                            </Grid>
                            <ProgressBar Minimum="0" 
                                         Maximum="{Binding TotalCount}" 
                                         Value="{Binding LearnedCount}" 
                                         Height="8"
                                         CornerRadius="4"
                                         Foreground="{DynamicResource SecondaryBrush}"
                                         Background="{DynamicResource SurfaceBorderBrush}"/>
                        </StackPanel>
                    </Grid>
                    
                </StackPanel>
            </DockPanel>
        </ScrollViewer>
        
        <!-- IMAGE PREVIEW OVERLAY -->
        <Grid IsVisible="{Binding IsImagePreviewOpen}" 
              x:Name="ImagePreviewOverlay"
              Background="#E6000000" 
              ZIndex="1000"
              Focusable="True">
            
            <Grid.KeyBindings>
                <KeyBinding Gesture="Ctrl+OemPlus" Command="{Binding ZoomInCommand}" />
                <KeyBinding Gesture="Ctrl+Subtract" Command="{Binding ZoomOutCommand}" />
                <KeyBinding Gesture="Ctrl+Add" Command="{Binding ZoomInCommand}" /> 
                <KeyBinding Gesture="Meta+OemPlus" Command="{Binding ZoomInCommand}" />
                <KeyBinding Gesture="Meta+Subtract" Command="{Binding ZoomOutCommand}" />
                <KeyBinding Gesture="Meta+Add" Command="{Binding ZoomInCommand}" />
            </Grid.KeyBindings>
            
            <Grid>
                <!-- Image Area -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              AllowAutoHide="False"
                              x:Name="ImageScrollViewer"
                              Classes="image-preview-scroll">
                    <ScrollViewer.GestureRecognizers>
                        <PinchGestureRecognizer />
                    </ScrollViewer.GestureRecognizers>
                    <Canvas HorizontalAlignment="Center" VerticalAlignment="Center"
                            Width="{Binding ScaledImageWidth}" 
                            Height="{Binding ScaledImageHeight}">
                        <Image Source="{Binding PreviewImageSource}" 
                               x:Name="PreviewImage"
                               Stretch="Uniform"
                               Width="{Binding ScaledImageWidth}"
                               Height="{Binding ScaledImageHeight}"/>
                    </Canvas>
                </ScrollViewer>

                <!-- Close Button -->
                <Button Command="{Binding CloseImagePreviewCommand}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="24"
                        Width="48" Height="48"
                        CornerRadius="24"
                        Background="#66000000"
                        Padding="0">
                    <materialIcons:MaterialIcon Kind="Close" Width="24" Height="24" Foreground="White"/>
                </Button>

                <!-- Zoom Controls -->
                <Border VerticalAlignment="Bottom" 
                        CornerRadius="28"
                        Background="#CC202020"
                        BorderBrush="#44FFFFFF"
                        BorderThickness="1"
                        BoxShadow="0 4 16 0 #80000000"
                        Classes="image-preview-controls">
                    <Grid>
                        <Grid ColumnDefinitions="Auto,Auto,Auto,Auto" VerticalAlignment="Center" Classes="image-preview-controls-grid" IsVisible="{Binding !#Root.IsCompactMode}">
                            <Button Command="{Binding ResetZoomCommand}" 
                                    Background="#33FFFFFF" 
                                    ToolTip.Tip="Zoom zurücksetzen"
                                    Classes="image-preview-control-button">
                                 <materialIcons:MaterialIcon Kind="MagnifyScan" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            
                            <Button Command="{Binding ZoomOutCommand}" 
                                    Background="#33FFFFFF" 
                                    Classes="image-preview-control-button"
                                    Grid.Column="1">
                                <materialIcons:MaterialIcon Kind="Minus" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            
                            <Grid ColumnDefinitions="Auto,Auto" VerticalAlignment="Center" Classes="image-preview-zoom-grid" Grid.Column="2">
                                <Slider Minimum="0.1" Maximum="5.0" Value="{Binding ImageZoomLevel}" 
                                        VerticalAlignment="Center"
                                        Classes="image-preview-zoom-slider"
                                        Width="160"/>
                                
                                <TextBlock Text="{Binding ImageZoomLevel, StringFormat='{}{0:0.0}x'}" 
                                           Foreground="White" 
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           FontWeight="Medium"
                                           Classes="image-preview-zoom-text"
                                           Grid.Column="1"/>
                            </Grid>

                            <Button Command="{Binding ZoomInCommand}" 
                                    Background="#33FFFFFF" 
                                    Classes="image-preview-control-button"
                                    Grid.Column="3">
                                 <materialIcons:MaterialIcon Kind="Plus" Width="20" Height="20" Foreground="White"/>
                            </Button>
                        </Grid>
                        <Grid ColumnDefinitions="Auto,Auto,*,Auto" VerticalAlignment="Center" Classes="image-preview-controls-grid" IsVisible="{Binding #Root.IsCompactMode}">
                            <Button Command="{Binding ResetZoomCommand}" 
                                    Background="#33FFFFFF" 
                                    ToolTip.Tip="Zoom zurücksetzen"
                                    Classes="image-preview-control-button">
                                 <materialIcons:MaterialIcon Kind="MagnifyScan" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            
                            <Button Command="{Binding ZoomOutCommand}" 
                                    Background="#33FFFFFF" 
                                    Classes="image-preview-control-button"
                                    Grid.Column="1">
                                <materialIcons:MaterialIcon Kind="Minus" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            
                            <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center" Classes="image-preview-zoom-grid" Grid.Column="2">
                                <Slider Minimum="0.1" Maximum="5.0" Value="{Binding ImageZoomLevel}" 
                                        VerticalAlignment="Center"
                                        Classes="image-preview-zoom-slider"/>
                                
                                <TextBlock Text="{Binding ImageZoomLevel, StringFormat='{}{0:0.0}x'}" 
                                           Foreground="White" 
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           FontWeight="Medium"
                                           Classes="image-preview-zoom-text"
                                           Grid.Column="1"/>
                            </Grid>

                            <Button Command="{Binding ZoomInCommand}" 
                                    Background="#33FFFFFF" 
                                    Classes="image-preview-control-button"
                                    Grid.Column="3">
                                 <materialIcons:MaterialIcon Kind="Plus" Width="20" Height="20" Foreground="White"/>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
