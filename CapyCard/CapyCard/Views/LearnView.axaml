<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CapyCard.ViewModels"
             xmlns:controls="using:CapyCard.Controls"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="CapyCard.Views.LearnView"
             x:DataType="vm:LearnViewModel"
             x:Name="Root">

    <UserControl.KeyBindings>
        <KeyBinding Command="{Binding SaveEditCommand}" Gesture="Ctrl+Enter"/>
        <KeyBinding Command="{Binding SaveEditCommand}" Gesture="Meta+Enter"/>
    </UserControl.KeyBindings>
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <DockPanel Margin="16">
                <!-- TOP HEADER -->
                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" DockPanel.Dock="Top" Margin="0,0,0,16">
                    <!-- Back Button -->
                    <Button Command="{Binding GoBackCommand}" 
                            Grid.Column="0"
                            Classes="primary"
                            VerticalAlignment="Center"
                            ToolTip.Tip="{Binding BackButtonText}"
                            Padding="12,8"
                            Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <materialIcons:MaterialIcon Kind="ArrowLeft" Width="20" Height="20" Foreground="#FFDDDDDD"/>
                            <TextBlock Text="{Binding BackButtonText}" Foreground="#FFDDDDDD" IsVisible="{Binding !#Root.IsCompactMode}"/>
                        </StackPanel>
                    </Button>
                    
                    <TextBlock Text="{Binding DeckName, StringFormat='Lern-Modus: {0}'}" 
                               Grid.Column="1"
                               FontSize="22" FontWeight="Bold" 
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource TextControlForeground}"
                               Margin="0,0,10,0"/>

                    <!-- Cycle Mode Button -->
                    <Button Grid.Column="2"
                            Command="{Binding CycleLearningModeCommand}"
                            Classes="icon"
                            VerticalAlignment="Center"
                            ToolTip.Tip="Lern-Modus wechseln">
                        <Panel>
                            <materialIcons:MaterialIcon Kind="FormatListBulleted" Width="24" Height="24" Foreground="{DynamicResource TextControlForeground}" IsVisible="{Binding IsSequentialMode}"/>
                            <materialIcons:MaterialIcon Kind="Shuffle" Width="24" Height="24" Foreground="{DynamicResource TextControlForeground}" IsVisible="{Binding IsRandomMode}"/>
                            <materialIcons:MaterialIcon Kind="Brain" Width="24" Height="24" Foreground="{DynamicResource PrimaryBrush}" IsVisible="{Binding IsSmartMode}"/>
                        </Panel>
                    </Button>

                    <!-- Restart Button -->
                    <Button Command="{Binding ResetDeckProgressCommand}" 
                            Grid.Column="3"
                            Margin="5,0,5,0"
                            Classes="icon"
                            VerticalAlignment="Center"
                            ToolTip.Tip="Von vorn beginnen">
                        <materialIcons:MaterialIcon Kind="Restart" Width="24" Height="24" Foreground="{DynamicResource TextControlForeground}"/>
                    </Button>
                </Grid>
                
                <!-- MAIN CONTENT AREA -->
                <StackPanel Spacing="16" VerticalAlignment="Top" Margin="0,10,0,0">
                    
                    <!-- FRONT CARD -->
                    <Border Classes="card" MinHeight="150">
                        <Grid>
                            <Grid ColumnDefinitions="*,Auto" IsVisible="{Binding !IsEditing}">
                                <ScrollViewer Grid.Column="0">
                                    <controls:FormattedTextBlock FormattedText="{Binding CurrentCardFront}"
                                                                 ImageClickCommand="{Binding OpenImagePreviewCommand}"/>
                                </ScrollViewer>
                                
                                <Button Command="{Binding StartEditCommand}"
                                        IsVisible="{Binding ShowEditButton}"
                                        Grid.Column="1"
                                        Classes="icon"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Right">
                                    <materialIcons:MaterialIcon Kind="Pencil" Width="20" Height="20" Foreground="{DynamicResource TextMutedBrush}"/>
                                </Button>
                            </Grid>
                            
                            <controls:WysiwygEditor Text="{Binding EditFrontText, Mode=TwoWay}"
                                                    IsVisible="{Binding IsEditing}"
                                                    Watermark="Vorderseite..."
                                                    MinHeight="150"
                                                    VerticalAlignment="Stretch"/>
                        </Grid>
                    </Border>
                    
                    <!-- BACK CARD -->
                    <Border Classes="card" 
                            MinHeight="150"
                            IsVisible="{Binding IsBackVisible}">
                        <Grid>
                            <Grid ColumnDefinitions="*,Auto" IsVisible="{Binding !IsEditing}">
                                <ScrollViewer Grid.Column="0">
                                    <controls:FormattedTextBlock FormattedText="{Binding CurrentCardBack}"
                                                                 ImageClickCommand="{Binding OpenImagePreviewCommand}"/>
                                </ScrollViewer>
                                     
                                <Button Command="{Binding StartEditCommand}"
                                        IsVisible="{Binding ShowEditButton}"
                                        Grid.Column="1"
                                        Classes="icon"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Right">
                                    <materialIcons:MaterialIcon Kind="Pencil" Width="20" Height="20" Foreground="{DynamicResource TextMutedBrush}"/>
                                </Button>
                            </Grid>

                            <controls:WysiwygEditor Text="{Binding EditBackText, Mode=TwoWay}"
                                                    IsVisible="{Binding IsEditing}"
                                                    Watermark="Rückseite..."
                                                    MinHeight="150"
                                                    VerticalAlignment="Stretch"/>
                        </Grid>
                    </Border>
                    
                    <!-- ACTION BUTTONS -->
                    <Grid Margin="0,16,0,0">
                        <!-- Standard Navigation -->
                        <Grid IsVisible="{Binding !IsEditing}">
                            <StackPanel IsVisible="{Binding !IsCurrentCardSmart}">
                                <Button Content="Rückseite anzeigen"
                                        Command="{Binding ShowBackCommand}"
                                        Classes="primary"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        IsVisible="{Binding ShowShowBackButton}"/>
                                
                                <Button Content="Nächste Karte"
                                        Command="{Binding NextCardCommand}"
                                        Classes="primary"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        IsVisible="{Binding ShowNextCardButton}"/>
                                
                                <Button Content="{Binding ReshuffleButtonText}"
                                        Command="{Binding NextCardCommand}"
                                        Classes="secondary"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        IsVisible="{Binding ShowReshuffleButton}"/>
                            </StackPanel>

                            <!-- Smart Mode Navigation (Rating Buttons) -->
                            <StackPanel IsVisible="{Binding IsCurrentCardSmart}">
                                 <Button Content="Rückseite anzeigen"
                                        Command="{Binding ShowBackCommand}"
                                        Classes="primary"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        IsVisible="{Binding ShowShowBackButton}"/>

                                 <Grid ColumnDefinitions="*,*,*,*" IsVisible="{Binding ShowNextCardButton}" Margin="0,8,0,0">
                                    <Button Grid.Column="0" Content="Nochmal" Command="{Binding RateCardCommand}" CommandParameter="1" HotKey="D1" 
                                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" 
                                            Background="#FFEF9A9A" Foreground="#B71C1C" CornerRadius="25" Margin="0,0,4,0"/>
                                    <Button Grid.Column="1" Content="Schwer" Command="{Binding RateCardCommand}" CommandParameter="2" HotKey="D2" 
                                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" 
                                            Background="#FFFFCC80" Foreground="#E65100" CornerRadius="25" Margin="4,0,4,0"/>
                                    <Button Grid.Column="2" Content="Gut" Command="{Binding RateCardCommand}" CommandParameter="3" HotKey="D3" 
                                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" 
                                            Background="#FFA5D6A7" Foreground="#1B5E20" CornerRadius="25" Margin="4,0,4,0"/>
                                    <Button Grid.Column="3" Content="Einfach" Command="{Binding RateCardCommand}" CommandParameter="4" HotKey="D4" 
                                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" 
                                            Background="#FF90CAF9" Foreground="#0D47A1" CornerRadius="25" Margin="4,0,0,0"/>
                                 </Grid>
                                 
                                 <Button Content="{Binding ReshuffleButtonText}"
                                        Command="{Binding NextCardCommand}"
                                        Classes="secondary"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        IsVisible="{Binding ShowReshuffleButton}"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Edit Mode Actions -->
                        <Grid ColumnDefinitions="*,*" IsVisible="{Binding IsEditing}">
                            <Button Content="Abbrechen"
                                    Command="{Binding CancelEditCommand}"
                                    Classes="secondary"
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"/>
                            
                            <Button Content="Speichern"
                                    Command="{Binding SaveEditCommand}"
                                    Classes="primary"
                                    Grid.Column="1"
                                    Margin="8,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"/>
                        </Grid>
                    </Grid>

                    <!-- PROGRESS BAR -->
                    <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,8,0,0" IsVisible="{Binding !IsEditing}">
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding ProgressModeLabel}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,12,0"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextMutedBrush}"/>
                        
                        <ProgressBar Grid.Column="1" 
                                     Minimum="0" 
                                     Maximum="{Binding TotalCount}" 
                                     Value="{Binding LearnedCount}" 
                                     VerticalAlignment="Center" 
                                     Height="8"
                                     CornerRadius="4"
                                     Foreground="{DynamicResource SecondaryBrush}"
                                     Background="{DynamicResource SurfaceBorderBrush}"/>
                        
                        <TextBlock Grid.Column="2" 
                                   Text="{Binding ProgressText}" 
                                   VerticalAlignment="Center" 
                                   Margin="12,0,0,0"
                                   Foreground="{DynamicResource TextMutedBrush}"/>
                    </Grid>
                    
                </StackPanel>
            </DockPanel>
        </ScrollViewer>
        
        <!-- IMAGE PREVIEW OVERLAY -->
        <Grid IsVisible="{Binding IsImagePreviewOpen}" 
              x:Name="ImagePreviewOverlay"
              Background="#E6000000" 
              ZIndex="1000"
              Focusable="True">
            
            <Grid.KeyBindings>
                <KeyBinding Gesture="Ctrl+OemPlus" Command="{Binding ZoomInCommand}" />
                <KeyBinding Gesture="Ctrl+Subtract" Command="{Binding ZoomOutCommand}" />
                <KeyBinding Gesture="Ctrl+Add" Command="{Binding ZoomInCommand}" /> 
                <KeyBinding Gesture="Meta+OemPlus" Command="{Binding ZoomInCommand}" />
                <KeyBinding Gesture="Meta+Subtract" Command="{Binding ZoomOutCommand}" />
                <KeyBinding Gesture="Meta+Add" Command="{Binding ZoomInCommand}" />
            </Grid.KeyBindings>
            
            <Grid>
                <!-- Image Area -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              AllowAutoHide="False"
                              Padding="0,0,0,100"
                              x:Name="ImageScrollViewer">
                    <ScrollViewer.GestureRecognizers>
                        <PinchGestureRecognizer />
                    </ScrollViewer.GestureRecognizers>
                    <LayoutTransformControl HorizontalAlignment="Center" VerticalAlignment="Center">
                        <LayoutTransformControl.LayoutTransform>
                            <ScaleTransform ScaleX="{Binding ImageZoomLevel}" ScaleY="{Binding ImageZoomLevel}"/>
                        </LayoutTransformControl.LayoutTransform>
                        <Image Source="{Binding PreviewImageSource}" 
                               x:Name="PreviewImage"
                               Stretch="None"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                    </LayoutTransformControl>
                </ScrollViewer>

                <!-- Close Button -->
                <Button Command="{Binding CloseImagePreviewCommand}"
                        HotKey="Escape"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="24"
                        Width="48" Height="48"
                        CornerRadius="24"
                        Background="#66000000"
                        Padding="0">
                    <materialIcons:MaterialIcon Kind="Close" Width="24" Height="24" Foreground="White"/>
                </Button>

                <!-- Zoom Controls -->
                <Border HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" 
                        Margin="0,0,0,48"
                        CornerRadius="28"
                        Background="#CC202020"
                        BorderBrush="#44FFFFFF"
                        BorderThickness="1"
                        Padding="24,12"
                        BoxShadow="0 4 16 0 #80000000">
                    <StackPanel Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                        
                        <Button Click="OnResetZoomClick" 
                                Width="40" Height="40"
                                CornerRadius="20"
                                Background="#33FFFFFF" 
                                Padding="8"
                                ToolTip.Tip="Zoom zurücksetzen">
                             <materialIcons:MaterialIcon Kind="MagnifyScan" Width="20" Height="20" Foreground="White"/>
                        </Button>
                        
                        <Button Command="{Binding ZoomOutCommand}" 
                                Width="40" Height="40"
                                CornerRadius="20"
                                Background="#33FFFFFF" 
                                Padding="8">
                            <materialIcons:MaterialIcon Kind="Minus" Width="20" Height="20" Foreground="White"/>
                        </Button>
                        
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <Slider Minimum="0.1" Maximum="5.0" Value="{Binding ImageZoomLevel}" 
                                    Width="160"
                                    VerticalAlignment="Center"/>
                            
                            <TextBlock Text="{Binding ImageZoomLevel, StringFormat='{}{0:0.0}x'}" 
                                       Foreground="White" 
                                       Width="50" 
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       FontSize="16"
                                       FontWeight="Medium"/>
                        </StackPanel>

                        <Button Command="{Binding ZoomInCommand}" 
                                Width="40" Height="40"
                                CornerRadius="20"
                                Background="#33FFFFFF" 
                                Padding="8">
                             <materialIcons:MaterialIcon Kind="Plus" Width="20" Height="20" Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>