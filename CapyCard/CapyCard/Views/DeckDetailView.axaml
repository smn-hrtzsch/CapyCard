<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CapyCard.ViewModels"
             xmlns:views="using:CapyCard.Views"
             xmlns:converters="using:CapyCard.Converters"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
              x:Class="CapyCard.Views.DeckDetailView"
              x:DataType="vm:DeckDetailViewModel"
              x:Name="Root"
              Focusable="True">

    <UserControl.KeyBindings>
        <KeyBinding Command="{Binding SaveCardCommand}" Gesture="Ctrl+Enter"/>
        <KeyBinding Command="{Binding SaveCardCommand}" Gesture="Meta+Enter"/>
        <KeyBinding Command="{Binding StartLearningCustomCommand}" Gesture="Enter"/>
    </UserControl.KeyBindings>
    
    <!-- OUTER GRID FOR OVERLAYS -->
    <Grid ClipToBounds="False">
        <Grid RowDefinitions="Auto,*,Auto" ClipToBounds="False">
            <!-- 1. HEADER (Top) -->
            <StackPanel Grid.Row="0" Margin="16" Spacing="8">
                <Grid ColumnDefinitions="Auto,*,Auto">
                     <!-- Back Button -->
                     <Button Command="{Binding GoBackCommand}" 
                             Classes="primary"
                             Grid.Column="0"
                             VerticalAlignment="Center"
                             ToolTip.Tip="{Binding BackButtonText}"
                             Padding="12,8">
                           <StackPanel Orientation="Horizontal" Spacing="8">
                               <materialIcons:MaterialIcon Kind="ArrowLeft" Width="20" Height="20" VerticalAlignment="Center"/>
                               <TextBlock Text="{Binding BackButtonText}" 
                                          VerticalAlignment="Center"
                                          IsVisible="{Binding !#Root.IsCompactMode}"/>
                           </StackPanel>
                     </Button>
                    
                    <!-- Spacer -->
                    <Panel Grid.Column="1" />
                    
                    <!-- Export Button -->
                    <Button Command="{Binding ExportCommand}"
                            Classes="primary"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            ToolTip.Tip="Kartenstapel exportieren"
                            IsVisible="{Binding IsRootDeck}"
                            Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <materialIcons:MaterialIcon Kind="TrayArrowUp" Width="20" Height="20"/>
                            <TextBlock Text="Export" 
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding !#Root.IsCompactMode}"/>
                        </StackPanel>
                    </Button>
                </Grid>
                
                <Separator Height="1" Background="{DynamicResource SurfaceBorderBrush}" Opacity="0.5" Margin="0,4"/>
                
                <!-- Title (Always separate centered) -->
                <Border Background="{DynamicResource SurfaceBorderBrush}" 
                        CornerRadius="20" 
                        Padding="16,4" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="12,0"
                        Opacity="0.8">
                    <TextBlock Text="{Binding DeckName}" 
                               FontSize="18" FontWeight="Bold" 
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="{DynamicResource TextControlForeground}"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
            
            <!-- 2. DECK EDITOR (Content) -->
            <views:DeckEditorControl Grid.Row="1" 
                                     BottomSpacerHeight="{Binding #SubDeckList.FooterHeight}"
                                     IsCompactMode="{Binding #Root.IsCompactMode}" />

            <!-- 3. SUBDECK LIST OVERLAY (Bottom of Content Area) -->
            <views:SubDeckListControl x:Name="SubDeckList" Grid.Row="1" Grid.RowSpan="2" ZIndex="100"
                                      VerticalAlignment="Bottom"
                                      IsVisible="{Binding CanAddSubDecks}"
                                      IsCompactMode="{Binding #Root.IsCompactMode}"/>
        </Grid>
        
        <!-- POPUP OVERLAY (Selection) -->
        <Grid IsVisible="{Binding IsSubDeckSelectionVisible}" Background="#80000000" ZIndex="200">
            <Border Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="28" Padding="24" 
                    Margin="24"
                    VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                    MaxWidth="450" MaxHeight="600"
                    BoxShadow="0 4 16 0 #40000000">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid RowDefinitions="Auto,*,Auto" HorizontalAlignment="Stretch" MinWidth="300" Margin="0,0,12,12">
                    <TextBlock Text="Themen auswählen" 
                               FontSize="20" FontWeight="Bold" 
                               Margin="0,0,0,16"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource TextControlForeground}"/>
                    
                    <ScrollViewer Grid.Row="1" MaxHeight="300">
                        <ItemsControl ItemsSource="{Binding SubDeckSelectionList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected}" Margin="0,8">
                                        <TextBlock Text="{Binding Name}" TextWrapping="Wrap" Foreground="{DynamicResource TextControlForeground}"/>
                                    </CheckBox>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <Grid Grid.Row="2" ColumnDefinitions="*,*" Margin="0,16,0,4">
                        <Button Command="{Binding CancelSubDeckSelectionCommand}" 
                                Classes="secondary"
                                Grid.Column="0"
                                Margin="0,0,4,0"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center">
                            <TextBlock Text="Abbrechen" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </Button>
                        <Button Command="{Binding StartLearningCustomCommand}" 
                                Classes="primary"
                                Grid.Column="1"
                                Margin="4,0,0,0"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center">
                            <TextBlock Text="Starten" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </Button>
                    </Grid>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- DELETE CONFIRMATION OVERLAY -->
        <!-- Confirmation Dialog Overlay -->
        <Grid IsVisible="{Binding IsConfirmingDeleteSubDeck}" 
              Background="#80000000" 
              ZIndex="200"
              Focusable="True"
              x:Name="DeleteConfirmationOverlay">
            <Grid.KeyBindings>
                <KeyBinding Command="{Binding CancelDeleteSubDeckCommand}" Gesture="Escape"/>
                <KeyBinding Command="{Binding ConfirmDeleteSubDeckCommand}" Gesture="Enter"/>
            </Grid.KeyBindings>
            <Border Background="{DynamicResource SurfaceBrush}" 
                    Padding="24"
                    Margin="24"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    MaxWidth="400"
                    CornerRadius="28"
                    BoxShadow="0 4 16 0 #40000000">
                <StackPanel Spacing="16">
                    <TextBlock Text="Thema löschen?" 
                               FontSize="20" FontWeight="Bold"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource TextControlForeground}"/>
                    <TextBlock Text="Möchtest du dieses Thema und alle Karten wirklich löschen?"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource TextMutedBrush}"/>
                    
                    <Grid ColumnDefinitions="*,*" Margin="0,8,0,0">
                        <Button Content="Abbrechen" 
                                Command="{Binding CancelDeleteSubDeckCommand}"
                                Classes="secondary"
                                Grid.Column="0"
                                Margin="0,0,4,0"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center">
                            <TextBlock Text="Abbrechen" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </Button>
                        
                        <Button Content="Löschen" 
                                Command="{Binding ConfirmDeleteSubDeckCommand}"
                                Classes="destructive"
                                Grid.Column="1"
                                Margin="4,0,0,0"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center">
                            <TextBlock Text="Löschen" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- LOADING OVERLAY -->
        <Grid IsVisible="{Binding IsLoading}" Background="#80000000" ZIndex="250">
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="24"
                    Padding="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 4 16 0 #40000000">
                <StackPanel Spacing="12" HorizontalAlignment="Center">
                    <TextBlock Text="Lade Daten..." FontSize="16" FontWeight="SemiBold" />
                    <ProgressBar IsIndeterminate="True" Width="140" Height="6" />
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Export Dialog Overlay -->
        <views:ExportDialog x:Name="ExportDialog" DataContext="{Binding ExportViewModel}"/>
    </Grid>
</UserControl>
