<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CapyCard.ViewModels"
             xmlns:converters="using:CapyCard.Converters"
             xmlns:controls="using:CapyCard.Controls"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="CapyCard.Views.DeckEditorControl"
             x:DataType="vm:DeckDetailViewModel"
             x:Name="Root">
    
    <ScrollViewer Classes.rootDeck="{Binding CanAddSubDecks}"
                  VerticalAlignment="Top"
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <DockPanel Margin="16">
            <StackPanel Spacing="16">
                <TextBlock Text="Neue Karte erstellen" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextControlForeground}"/>
                
                <Grid x:Name="EditorsGrid" ColumnDefinitions="*,Auto,*" RowDefinitions="Auto,*">
                    <TextBlock x:Name="FrontLabel"
                               Text="Vorderseite" 
                               Grid.Row="0" Grid.Column="0" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextMutedBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="BackLabel"
                               Text="R端ckseite" 
                               Grid.Row="0" Grid.Column="2" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextMutedBrush}"
                               Margin="0,0,0,8"/>

                    <controls:WysiwygEditor x:Name="FrontEditor"
                                            Text="{Binding NewCardFront, Mode=TwoWay}"
                                            Watermark="Text f端r Vorderseite..."
                                            MinHeight="180"
                                            VerticalAlignment="Stretch"
                                            Grid.Row="1" Grid.Column="0"/>

                    <materialIcons:MaterialIcon x:Name="ArrowIcon"
                                              Kind="ArrowRight" 
                                              Width="24" Height="24"
                                              Foreground="{DynamicResource TextMutedBrush}"
                                              Grid.Row="1" Grid.Column="1"
                                              VerticalAlignment="Center" 
                                              HorizontalAlignment="Center"
                                              Margin="12,0"/>
                    
                    <controls:WysiwygEditor x:Name="BackEditor"
                                            Text="{Binding NewCardBack, Mode=TwoWay}"
                                            Watermark="Text f端r R端ckseite..."
                                            MinHeight="180"
                                            VerticalAlignment="Stretch"
                                            Grid.Row="1" Grid.Column="2"/>
                </Grid>
                
                <!-- ACTION BUTTONS -->
                <Grid ColumnDefinitions="*,*">
                    <Button Content="Abbrechen" 
                            Command="{Binding CancelEditCommand}"
                            Classes="secondary"
                            IsVisible="{Binding IsEditing}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Grid.Column="0"
                            Margin="0,0,6,0"/>
                    
                    <Button Content="{Binding SaveButtonText}" 
                            Command="{Binding SaveCardCommand}"
                            Classes="primary"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            IsVisible="{Binding IsEditing}"
                            Grid.Column="1"
                            Margin="6,0,0,0"/>
                    
                    <Button Content="{Binding SaveButtonText}" 
                            Command="{Binding SaveCardCommand}"
                            Classes="primary"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            IsVisible="{Binding !IsEditing}"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"/>
                </Grid>
                
                <!-- LEARNING BUTTONS -->
                <Border BorderBrush="{DynamicResource DividerBrush}" BorderThickness="0,1,0,0" Margin="0,16,0,0" Padding="0,24,0,0">
                    <StackPanel Spacing="12">
                        <Button Content="{Binding CardCountText}" 
                                Command="{Binding GoToCardListCommand}"
                                Classes="secondary"
                                IsEnabled="{Binding HasCards}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"/>
                                
                        <Grid ColumnDefinitions="*,*,*" IsEnabled="{Binding HasCards}" IsVisible="{Binding IsRootDeck}">
                            <Button Content="Alle lernen" 
                                    Command="{Binding StartLearningAllCommand}"
                                    Classes="primary"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Center"
                                    Margin="0,0,4,0"
                                    ToolTip.Tip="Alle Karten lernen (inkl. Unterdecks)"/>
                            <Button Content="Allgemein" 
                                    Command="{Binding StartLearningMainCommand}"
                                    Classes="primary"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Center"
                                    Grid.Column="1" Margin="4,0,4,0"
                                    ToolTip.Tip="Nur Allgemeine Karten lernen"/>
                            <Button Content="Auswahl..." 
                                    Command="{Binding OpenSubDeckSelectionCommand}"
                                    Classes="secondary"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Center"
                                    Grid.Column="2" Margin="4,0,0,0"
                                    ToolTip.Tip="Bestimmte Themen lernen"/>
                        </Grid>
                        
                        <Button Content="Alle Karteikarten des Themas lernen" 
                                Command="{Binding StartLearningMainCommand}"
                                Classes="primary"
                                IsEnabled="{Binding HasCards}"
                                IsVisible="{Binding !IsRootDeck}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- SPACER -->
                <Border Height="100" IsVisible="{Binding CanAddSubDecks}" />
            </StackPanel>
        </DockPanel>
    </ScrollViewer>
</UserControl>