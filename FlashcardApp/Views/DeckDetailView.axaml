<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FlashcardApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="FlashcardApp.Views.DeckDetailView"
             x:DataType="vm:DeckDetailViewModel">
    
    <DockPanel Margin="10">
        <!-- ZURÜCK-Button und Titel -->
        <StackPanel DockPanel.Dock="Top" Spacing="5">
            <Button Content="&lt; Zurück zur Fächerliste"
                    Command="{Binding GoBackCommand}"
                    HorizontalAlignment="Left"/>
            
            <TextBlock Text="{Binding DeckName}"
                       FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
        </StackPanel>
        
        <!-- MITTE: Neue Karte hinzufügen -->
        <StackPanel DockPanel.Dock="Top" Spacing="5" Margin="0,15,0,0">
            <TextBlock Text="Neue Karte hinzufügen:" FontWeight="Bold"/>
            <TextBox Text="{Binding NewCardFront, Mode=TwoWay}" Watermark="Vorderseite..."/>
            <TextBox Text="{Binding NewCardBack, Mode=TwoWay}" Watermark="Rückseite..."/>
            <Button Content="Karte hinzufügen"
                    Command="{Binding AddCardCommand}"
                    HorizontalAlignment="Stretch"/>
        </StackPanel>

        <!-- UNTEN: Liste der Karten -->
        <Border BorderBrush="Gray" BorderThickness="1" Margin="0,10,0,0">
            <ListBox ItemsSource="{Binding Cards}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <!-- Zeigt Vorder- und Rückseite an -->
                        <StackPanel Spacing="5" Margin="5">
                            <TextBlock Text="{Binding Front}" FontWeight="Medium"/>
                            <TextBlock Text="{Binding Back}" Foreground="DarkGray"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </DockPanel>
</UserControl>