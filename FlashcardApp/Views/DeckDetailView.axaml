<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FlashcardApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="FlashcardApp.Views.DeckDetailView"
             x:DataType="vm:DeckDetailViewModel">
    
    <DockPanel Margin="10">
        <!-- OBERER BEREICH (unverändert) -->
        <Grid ColumnDefinitions="*,Auto" DockPanel.Dock="Top">
            <TextBlock Text="{Binding DeckName}" 
                       FontSize="18" FontWeight="Bold" 
                       VerticalAlignment="Center"/>
            
            <Button Content="Zurück zur Fächerliste" 
                    Command="{Binding GoBackCommand}" 
                    Grid.Column="1"
                    HorizontalAlignment="Right"/>
        </Grid>
        
        <!-- MITTLERER BEREICH (unverändert) -->
        <StackPanel Spacing="10" Margin="0,15,0,0">
            <TextBlock Text="Neue Karte erstellen:" FontWeight="Bold"/>
            
            <Grid ColumnDefinitions="*,Auto,*" RowDefinitions="Auto,*">
                
                <TextBlock Text="Vorderseite" 
                           Grid.Row="0" Grid.Column="0" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Rückseite" 
                           Grid.Row="0" Grid.Column="2" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                
                <TextBox Text="{Binding NewCardFront, Mode=TwoWay}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Watermark="Text für Vorderseite..."
                         Height="150"
                         Grid.Row="1" Grid.Column="0"
                         BorderBrush="Gray" BorderThickness="1"/>
                
                <Path Data="M 10,0 L 20,10 L 10,20 M 0,10 L 20,10" 
                      Stroke="Gray" 
                      StrokeThickness="2"
                      Grid.Row="1" Grid.Column="1"
                      VerticalAlignment="Center" 
                      HorizontalAlignment="Center"
                      Margin="10,0"/>
                
                <TextBox Text="{Binding NewCardBack, Mode=TwoWay}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Watermark="Text für Rückseite..."
                         Height="150"
                         Grid.Row="1" Grid.Column="2"
                         BorderBrush="Gray" BorderThickness="1"/>
            </Grid>
            
            <!-- 
              KORREKTUR (DESIGN):
              "Karte hinzufügen" hat keine eigenen Farben, es verwendet
              den Standard-Look (dunkles Grau im Dark Mode).
            -->
            <Button Content="Karte hinzufügen" 
                    Command="{Binding AddCardCommand}"
                    HorizontalAlignment="Stretch"/>
            
            <!-- UNTERER BEREICH: Navigations-Buttons -->
            <Border BorderBrush="LightGray" BorderThickness="0,1,0,0" Margin="0,20,0,0" Padding="0,20,0,0">
                <StackPanel Spacing="10">
                    
                    <!-- 
                      KORREKTUR (DESIGN):
                      Background="Gray" und Foreground="White" entfernt,
                      damit dieser Button den Standard-Look annimmt.
                    -->
                    <Button Content="{Binding CardCountText}" 
                            Command="{Binding GoToCardListCommand}"
                            IsEnabled="{Binding HasCards}"
                            HorizontalAlignment="Stretch"/>
                            
                    <!-- 
                      KORREKTUR (DESIGN):
                      Background="..." und Foreground="White" entfernt,
                      damit dieser Button den Standard-Look annimmt.
                    -->
                    <Button Content="Karteikarten lernen" 
                            Command="{Binding GoToLearnCommand}"
                            IsEnabled="{Binding HasCards}"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </DockPanel>
</UserControl>