<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FlashcardApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="FlashcardApp.Views.LearnView"
             x:DataType="vm:LearnViewModel">

    <UserControl.Styles>
        <Style Selector="ToggleButton.shuffle-toggle">
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </Style>
        <Style Selector="ToggleButton.shuffle-toggle:checked">
            <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}"/>
        </Style>
        <!-- This is the key fix: The default template puts the accent color on an
             inner ContentPresenter, so we must target it specifically to override it. -->
        <Style Selector="ToggleButton.shuffle-toggle:checked /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </UserControl.Styles>

    <!-- 
      KORREKTUR (LAYOUT):
      HorizontalScrollBarVisibility="Disabled".
    -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <DockPanel Margin="10">
            <!-- OBERER BEREICH (unverändert) -->
            <Grid ColumnDefinitions="*,Auto,Auto,Auto" DockPanel.Dock="Top" Margin="0,0,0,10">
                <TextBlock Text="Lern-Modus" 
                           FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center"/>

                <ToggleButton Grid.Column="1"
                              Command="{Binding ToggleRandomOrderCommand}"
                              IsChecked="{Binding IsRandomOrder}"
                              Classes="shuffle-toggle"
                              Background="Transparent" BorderThickness="0"
                              Width="30" Height="30" Padding="4">
                    <Path Data="M0 3.5A.5.5 0 0 1 .5 3H1c2.202 0 3.827 1.24 4.874 2.418.49.552.865 1.102 1.126 1.532.26-.43.636-.98 1.126-1.532C9.173 4.24 10.798 3 13 3v1c-1.798 0-3.173 1.01-4.126 2.082A9.6 9.6 0 0 0 7.556 8a9.6 9.6 0 0 0 1.317 1.918C9.828 10.99 11.204 12 13 12v1c-2.202 0-3.827-1.24-4.874-2.418A10.6 10.6 0 0 1 7 9.05c-.26.43-.636-.98-1.126 1.532C4.827 11.76 3.202 13 1 13H.5a.5.5 0 0 1 0-1H1c1.798 0 3.173-1.01 4.126-2.082A9.6 9.6 0 0 0 6.444 8a9.6 9.6 0 0 0-1.317-1.918C4.172 5.01 2.796 4 1 4H.5a.5.5 0 0 1-.5-.5 M13 5.466V1.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384l-2.36 1.966a.25.25 0 0 1-.41-.192 M13 14.466v-3.932a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384l-2.36 1.966a.25.25 0 0 1-.41-.192"
                          Fill="{Binding $parent[ToggleButton].Foreground}"
                          Stretch="Uniform"/>
                </ToggleButton>

                <Button Content="Von vorn beginnen" 
                        Command="{Binding ResetDeckProgressCommand}" 
                        Grid.Column="2"
                        Margin="5,0,5,0"
                        HorizontalAlignment="Right"/>
                
                <Button Content="Zurück zum Fach" 
                        Command="{Binding GoBackCommand}" 
                        Grid.Column="3"
                        HorizontalAlignment="Right"/>
            </Grid>
            
            <!-- MITTE (unverändert) -->
            <StackPanel Spacing="15" VerticalAlignment="Top" Margin="0,10,0,0">
                
                <!-- VORDERSEITE -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Padding="10"
                        MinHeight="150">
                    <Grid>
                        <Grid ColumnDefinitions="*,Auto" IsVisible="{Binding !IsEditing}">
                            <ScrollViewer Grid.Column="0">
                                <TextBlock Text="{Binding CurrentCardFront}" TextWrapping="Wrap"/>
                            </ScrollViewer>
                            
                            <Button Command="{Binding StartEditCommand}"
                                    IsVisible="{Binding ShowEditButton}"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="Transparent" BorderThickness="0"
                                    Width="26" Height="26" Padding="4">
                                <Path Data="M 3 17.25 V 21 H 6.75 L 17.81 9.94 L 14.06 6.19 L 3 17.25 Z M 20.71 7.04 C 21.1 6.65 21.1 6.02 20.71 5.63 L 18.37 3.29 C 17.98 2.9 17.35 2.9 16.96 3.29 L 15.13 5.12 L 18.88 8.87 L 20.71 7.04 Z" 
                                      Fill="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                      Stretch="Uniform"/>
                            </Button>
                        </Grid>
                        
                        <TextBox Text="{Binding EditFrontText, Mode=TwoWay}"
                                 IsVisible="{Binding IsEditing}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="150"
                                 VerticalAlignment="Stretch"/>
                    </Grid>
                </Border>
                
                <!-- RÜCKSEITE -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Padding="10"
                        MinHeight="150"
                        IsVisible="{Binding IsBackVisible}">
                    <Grid>
                        <Grid ColumnDefinitions="*,Auto" IsVisible="{Binding !IsEditing}">
                            <ScrollViewer Grid.Column="0">
                                <TextBlock Text="{Binding CurrentCardBack}" TextWrapping="Wrap"/>
                            </ScrollViewer>
                                 
                            <Button Command="{Binding StartEditCommand}"
                                    IsVisible="{Binding ShowEditButton}"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="Transparent" BorderThickness="0"
                                    Width="26" Height="26" Padding="4">
                                <Path Data="M 3 17.25 V 21 H 6.75 L 17.81 9.94 L 14.06 6.19 L 3 17.25 Z M 20.71 7.04 C 21.1 6.65 21.1 6.02 20.71 5.63 L 18.37 3.29 C 17.98 2.9 17.35 2.9 16.96 3.29 L 15.13 5.12 L 18.88 8.87 L 20.71 7.04 Z" 
                                      Fill="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                      Stretch="Uniform"/>
                            </Button>
                        </Grid>

                        <TextBox Text="{Binding EditBackText, Mode=TwoWay}"
                                 IsVisible="{Binding IsEditing}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="150"
                                 VerticalAlignment="Stretch"/>
                    </Grid>
                </Border>
                
                <!-- BUTTON-BEREICH (unverändert) -->
                <Grid>
                    <Grid IsVisible="{Binding !IsEditing}">
                        <Button Content="Rückseite anzeigen"
                                Command="{Binding ShowBackCommand}"
                                HorizontalAlignment="Stretch"
                                IsVisible="{Binding ShowShowBackButton}"/>
                        
                        <Button Content="Nächste Karte"
                                Command="{Binding NextCardCommand}"
                                HorizontalAlignment="Stretch"
                                IsVisible="{Binding ShowNextCardButton}"/>
                        
                        <Button Content="{Binding ReshuffleButtonText}"
                                Command="{Binding NextCardCommand}"
                                HorizontalAlignment="Stretch"
                                IsVisible="{Binding ShowReshuffleButton}"/>
                    </Grid>
                    
                    <Grid ColumnDefinitions="*,*" IsVisible="{Binding IsEditing}">
                        <Button Content="Abbrechen"
                                Command="{Binding CancelEditCommand}"
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                HorizontalAlignment="Stretch"/>
                        
                        <Button Content="Karte speichern"
                                Command="{Binding SaveEditCommand}"
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Stretch"/>
                    </Grid>
                </Grid>

                <!-- PROGRESS BAR -->
                <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,5,0,0" IsVisible="{Binding !IsEditing}">
                    <TextBlock Grid.Column="0" 
                               Text="{Binding ProgressModeLabel}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               FontWeight="SemiBold"/>
                    
                    <ProgressBar Grid.Column="1" 
                                 Minimum="0" 
                                 Maximum="{Binding TotalCount}" 
                                 Value="{Binding LearnedCount}" 
                                 VerticalAlignment="Center" 
                                 Height="6"/>
                    
                    <TextBlock Grid.Column="2" 
                               Text="{Binding ProgressText}" 
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"/>
                </Grid>
                
            </StackPanel>
        </DockPanel>
    </ScrollViewer>
</UserControl>