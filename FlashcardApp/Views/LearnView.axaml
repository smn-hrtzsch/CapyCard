<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FlashcardApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="FlashcardApp.Views.LearnView"
             x:DataType="vm:LearnViewModel">
    <!-- 
      KORREKTUR (LAYOUT):
      HorizontalScrollBarVisibility="Disabled".
    -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <DockPanel Margin="10">
            <!-- OBERER BEREICH (unverändert) -->
            <Grid ColumnDefinitions="*,Auto" DockPanel.Dock="Top" Margin="0,0,0,10">
                <TextBlock Text="Lern-Modus" 
                           FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center"/>
                
                <Button Content="Zurück zum Fach" 
                        Command="{Binding GoBackCommand}" 
                        Grid.Column="1"
                        HorizontalAlignment="Right"/>
            </Grid>
            
            <!-- MITTE (unverändert) -->
            <StackPanel Spacing="15" VerticalAlignment="Top" Margin="0,10,0,0">
                
                <!-- VORDERSEITE -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Padding="10"
                        MinHeight="150">
                    <Grid>
                        <Grid ColumnDefinitions="*,Auto" IsVisible="{Binding !IsEditing}">
                            <ScrollViewer Grid.Column="0">
                                <TextBlock Text="{Binding CurrentCardFront}" TextWrapping="Wrap"/>
                            </ScrollViewer>
                            
                            <Button Command="{Binding StartEditCommand}"
                                    IsVisible="{Binding ShowEditButton}"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="Transparent" BorderThickness="0"
                                    Width="26" Height="26" Padding="4">
                                <Path Data="M 3 17.25 V 21 H 6.75 L 17.81 9.94 L 14.06 6.19 L 3 17.25 Z M 20.71 7.04 C 21.1 6.65 21.1 6.02 20.71 5.63 L 18.37 3.29 C 17.98 2.9 17.35 2.9 16.96 3.29 L 15.13 5.12 L 18.88 8.87 L 20.71 7.04 Z" 
                                      Fill="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                      Stretch="Uniform"/>
                            </Button>
                        </Grid>
                        
                        <TextBox Text="{Binding EditFrontText, Mode=TwoWay}"
                                 IsVisible="{Binding IsEditing}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="150"
                                 VerticalAlignment="Stretch"/>
                    </Grid>
                </Border>
                
                <!-- RÜCKSEITE -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Padding="10"
                        MinHeight="150"
                        IsVisible="{Binding IsBackVisible}">
                    <Grid>
                        <Grid ColumnDefinitions="*,Auto" IsVisible="{Binding !IsEditing}">
                            <ScrollViewer Grid.Column="0">
                                <TextBlock Text="{Binding CurrentCardBack}" TextWrapping="Wrap"/>
                            </ScrollViewer>
                                 
                            <Button Command="{Binding StartEditCommand}"
                                    IsVisible="{Binding ShowEditButton}"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="Transparent" BorderThickness="0"
                                    Width="26" Height="26" Padding="4">
                                <Path Data="M 3 17.25 V 21 H 6.75 L 17.81 9.94 L 14.06 6.19 L 3 17.25 Z M 20.71 7.04 C 21.1 6.65 21.1 6.02 20.71 5.63 L 18.37 3.29 C 17.98 2.9 17.35 2.9 16.96 3.29 L 15.13 5.12 L 18.88 8.87 L 20.71 7.04 Z" 
                                      Fill="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                      Stretch="Uniform"/>
                            </Button>
                        </Grid>

                        <TextBox Text="{Binding EditBackText, Mode=TwoWay}"
                                 IsVisible="{Binding IsEditing}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="150"
                                 VerticalAlignment="Stretch"/>
                    </Grid>
                </Border>
                
                <!-- BUTTON-BEREICH (unverändert) -->
                <Grid>
                    <Grid IsVisible="{Binding !IsEditing}">
                        <Button Content="Rückseite anzeigen"
                                Command="{Binding ShowBackCommand}"
                                HorizontalAlignment="Stretch"
                                IsVisible="{Binding ShowShowBackButton}"/>
                        
                        <Button Content="Nächste Karte"
                                Command="{Binding NextCardCommand}"
                                HorizontalAlignment="Stretch"
                                IsVisible="{Binding ShowNextCardButton}"/>
                        
                        <Button Content="Neu mischen &amp; Starten"
                                Command="{Binding NextCardCommand}"
                                HorizontalAlignment="Stretch"
                                IsVisible="{Binding ShowReshuffleButton}"/>
                    </Grid>
                    
                    <Grid ColumnDefinitions="*,*" IsVisible="{Binding IsEditing}">
                        <Button Content="Abbrechen"
                                Command="{Binding CancelEditCommand}"
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                HorizontalAlignment="Stretch"/>
                        
                        <Button Content="Karte speichern"
                                Command="{Binding SaveEditCommand}"
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Stretch"/>
                    </Grid>
                </Grid>
                
            </StackPanel>
        </DockPanel>
    </ScrollViewer>
</UserControl>