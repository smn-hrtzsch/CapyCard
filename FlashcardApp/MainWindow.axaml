<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FlashcardApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
        x:Class="FlashcardApp.MainWindow"
        x:DataType="vm:MainViewModel" 
        Title="FlashcardApp"
        Width="400" Height="600">
            
    <!-- 
      Alle Kommentare sind jetzt HIER, innerhalb des <Window>...</Window>
      Blocks, aber außerhalb der <Window ...> Tag-Definition.
      
      Dieser ContentControl hostet unsere 'Seiten' (CurrentViewModel).
      Der ViewLocator übersetzt das ViewModel in die korrekte View.
    -->
    <ContentControl Content="{Binding CurrentViewModel}" />

</Window>